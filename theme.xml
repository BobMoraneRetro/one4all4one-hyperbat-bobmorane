		<extgamesyst>${themePath}/_systemmedia/_Logosyst/Clearlogos/{game:system}.png</extgamesyst>
		<!-- Jeux : gamethème Hyperbat -->
		<extgametheme>${bobmediapath}/_gametheme/${system.theme}/hyperbat</extgametheme>
