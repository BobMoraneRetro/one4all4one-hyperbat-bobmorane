<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" inherits="gamecarousel">
		<gamecarousel name="gamecarousel">
			<itemTemplate>
				<container>
					<image name="fondwheel">
						<pos>0.5</pos>
						<origin>0.5</origin>
						<maxSize>1</maxSize>
						<path>${themePath}/_viewgameoption/gl-common/logojeux/ovalcarb.png</path>
						<zIndex>99</zIndex>
						<opacity>1</opacity>
						<storyboard event="activate">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
						<storyboard event="scroll">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
						<storyboard event="deactivate">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
					</image>
					<image name="marquee">
						<pos>0.5</pos>
						<origin>0.5</origin>
						<maxSize>0.6 0.4</maxSize>
						<path>{game:marquee}</path>
						<zIndex>100</zIndex>
						<linearSmooth>true</linearSmooth>
						<storyboard event="activate">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
						<storyboard event="scroll">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
						<storyboard event="deactivate">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
					</image>
					<image name="favorite">
						<visible>{game:favorite}</visible>
						<path>${themePath}/_viewgameoption/gl-coinopsnext/favoris/yesfull.png</path>
						<pos>0.78 0.25</pos>
						<zIndex>98</zIndex>
						<maxSize>0.35 0.35</maxSize>
						<storyboard event="activate">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
						<storyboard event="scroll">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
						<storyboard event="deactivate">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
					</image>
					<text name="gamename">
						<visible>!exists({game:marquee})</visible>
						<text>{game:name}</text>
						<fontPath>${themePath}/_viewgame/show/impact.ttf</fontPath>
						<color>FFFFFF</color>
						<alignment>center</alignment>
						<fontSize>0.028</fontSize>
						<lineSpacing>1</lineSpacing>
						<size>0.77 0.5</size>
						<pos>0.115 0.25</pos>
						<glowColor>00000066</glowColor>
						<glowSize>2</glowSize>
						<zIndex>400</zIndex>
						<multiLine>true</multiLine>
						<storyboard event="activate">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
						<storyboard event="scroll">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
						<storyboard event="deactivate">
							<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
							<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
						</storyboard>
					</text>
				</container>
			</itemTemplate>
		</gamecarousel>
	</customView>
</theme>
