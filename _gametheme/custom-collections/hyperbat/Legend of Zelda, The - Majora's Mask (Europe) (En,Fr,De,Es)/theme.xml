<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.500000000000 0.500000000000</pos>
			<size>1.000000000000 1.000000000000</size>
			<zIndex>501</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
		</image>
		<video name="PreviewVid" extra="true">
			<path>{game:video}</path>
			<pos>0.35 0.3</pos>
			<maxSize>0.4 0.4</maxSize>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<delay>0.4</delay>
			<effect>none</effect>
			<zIndex>502</zIndex>
			<shader>
				<path>:/shaders/border.glsl</path>
				<cornerRadius>0.1</cornerRadius>
				<borderSize>0.01</borderSize>
				<borderColor>FFFFFFAA</borderColor>
				<innerShadowSize/>
				<innerShadowColor>00000030</innerShadowColor>
				<outerShadowSize/>
				<outerShadowColor>00000050</outerShadowColor>
			</shader>
		</video>
		<control name="PreviewVid,Videobezel">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
			</storyboard>
		</control>
		<image name="titrecollection" extra="true">
			<path>./collection.png</path>
			<autoFade>false</autoFade>
			<origin>0.5 0.5</origin>
			<pos>0.85 0.25</pos>
			<maxSize>0.5 0.5</maxSize>
			<zIndex>999</zIndex>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<linearSmooth>true</linearSmooth>
		</image>
		<image name="vignetagehsg" extra="true">
			<path>${themePath}/_viewgame/hyperbat/overlay.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<zIndex>600</zIndex>
			<opacity>1</opacity>
		</image>
		<image name="selected" extra="true">
			<path>./selected.png</path>
			<saturation>0</saturation>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<maxSize>1 1</maxSize>
			<zIndex>503</zIndex>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<linearSmooth>true</linearSmooth>
			<storyboard event="open">
				<animation property="saturation" to="1" duration="500" mode="EaseInQuint"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="saturation" to="1" duration="500" mode="EaseInQuint"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="saturation" to="1" duration="500" mode="EaseInQuint"/>
			</storyboard>
		</image>
		<image name="select" extra="true">
			<path>./select.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.66 0.48</pos>
			<maxSize>0.1 0.1</maxSize>
			<zIndex>600</zIndex>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<linearSmooth>true</linearSmooth>
			<storyboard repeat="forever">
				<animation property="offsetY" to="0.04" duration="500" autoreverse="true" mode="EaseInQuint"/>
			</storyboard>
		</image>
		<image name="noirblanc" extra="true">
			<path>./noirblanc.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<maxSize>1 1</maxSize>
			<zIndex>502</zIndex>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<linearSmooth>true</linearSmooth>
		</image>
		<image name="md_cartridge" extra="true">
			<visible>false</visible>
			<zIndex>260</zIndex>
		</image>
		<image name="md_boxart" extra="true">
			<visible>false</visible>
			<zIndex>260</zIndex>
		</image>
		<control name="titrecollection, selected, noirblanc, Background">
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="1" begin="200" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="1" begin="200" mode="Linear"/>
			</storyboard>
		</control>
	</customView>
</theme>
