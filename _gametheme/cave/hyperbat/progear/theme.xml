<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<!-- ################ Fond du theme ##################### -->
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork1 ##################### -->
		<image name="Artwork1" extra="true">
			<path>./Artwork1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.725833333333333 0.212962962962963</pos>
			<size>0.520833333333333 0.425925925925926</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="1500" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" duration="3000" mode="EaseOutQuint"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="1500" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" duration="3000" mode="EaseOutQuint"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="1500" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" duration="3000" mode="EaseOutQuint"/>
			</storyboard>
		</image>
		<!-- ################ Artwork2 ##################### -->
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.20 0.49212962962963</pos>
			<size>0.179166666666667 0.930555555555556</size>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="1500" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="1500" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="1500" mode="Linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork3 ##################### -->
		<image name="Artwork3" extra="true">
			<path>./Artwork3.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.300520833333333 0.787037037037037</pos>
			<size>0.575 0.4</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1500" mode="Linear"/>
				<animation property="offsetX" from="-0.4" to="0" begin="1000" duration="2000" mode="easeOut"/>
				<animation property="scaleOrigin"  to="0 0" begin="1000" duration="" mode="linear"/>
				<animation property="scale" from="0.7" to="1" begin="1000" duration="2000" mode="easeOut"/>
				<animation property="offsetX" from="0" to="-0.020" begin="3000" duration="3000" autoreverse="true" repeat="forever" mode="easeInOut"/>
				<animation property="offsetY" from="0" to="-0.020" begin="3500" duration="2000" autoreverse="true" repeat="forever" mode="easeInOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1500" mode="Linear"/>
				<animation property="offsetX" from="-0.4" to="0" begin="1000" duration="2000" mode="easeOut"/>
				<animation property="scaleOrigin"  to="0 0" begin="1000" duration="" mode="linear"/>
				<animation property="scale" from="0.7" to="1" begin="1000" duration="2000" mode="easeOut"/>
				<animation property="offsetX" from="0" to="-0.020" begin="3000" duration="3000" autoreverse="true" repeat="forever" mode="easeInOut"/>
				<animation property="offsetY" from="0" to="-0.020" begin="3500" duration="2000" autoreverse="true" repeat="forever" mode="easeInOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1500" mode="Linear"/>
				<animation property="offsetX" from="-0.4" to="0" begin="1000" duration="2000" mode="easeOut"/>
				<animation property="scaleOrigin"  to="0 0" begin="1000" duration="" mode="linear"/>
				<animation property="scale" from="0.7" to="1" begin="1000" duration="2000" mode="easeOut"/>
				<animation property="offsetX" from="0" to="-0.020" begin="3000" duration="3000" autoreverse="true" repeat="forever" mode="easeInOut"/>
				<animation property="offsetY" from="0" to="-0.020" begin="3500" duration="2000" autoreverse="true" repeat="forever" mode="easeInOut"/>
			</storyboard>
		</image>
