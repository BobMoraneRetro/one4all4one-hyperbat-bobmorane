<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<!-- ################ Fond du theme ##################### -->
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
			<saturation>0.5</saturation>
			
		<storyboard event="open">
			<animation property="saturation" from="0.5" to="0.8" begin="4000" duration="5000" autoreverse="true" repeat="forever" mode="Linear"/>
		</storyboard>
		<storyboard event="activateNext" >
			<animation property="saturation" from="0.5" to="0.8" begin="4000" duration="5000" autoreverse="true" repeat="forever" mode="Linear"/>
		</storyboard>
		<storyboard event="activatePrev">
			<animation property="saturation" from="0.5" to="0.8" begin="4000" duration="5000" autoreverse="true" repeat="forever" mode="Linear"/>
		</storyboard>
			
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork1 ##################### -->
		<image name="Artwork1" extra="true">
			<path>./Artwork1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.85 0.45</pos>
			<size>0.211458333333333 0.742592592592593</size>
			<linearSmooth>true</linearSmooth>
		<storyboard event="open">
			<animation property="scaleOrigin" to="0 0" mode="Linear"/>
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="600" duration="500" mode="linear"/>
			<animation property="pos" to="0.5 0.5" begin="100" duration="" mode="Linear"/>			
			<animation property="scale" from="0" to="3" begin="600" duration="500" mode="Linear"/>
			<animation property="pos" to="0.85 0.5" begin="1250" duration="500" mode="Linear"/>
			<animation property="scale" from="2.5" to="1" begin="1250" duration="500" mode="Linear"/>
		</storyboard>
		<storyboard event="activateNext" >
			<animation property="scaleOrigin" to="0 0" mode="Linear"/>
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="600" duration="500" mode="linear"/>
			<animation property="pos" to="0.5 0.5" begin="100" duration="" mode="Linear"/>			
			<animation property="scale" from="0" to="3" begin="600" duration="500" mode="Linear"/>
			<animation property="pos" to="0.85 0.5" begin="1250" duration="500" mode="Linear"/>
			<animation property="scale" from="2.5" to="1" begin="1250" duration="500" mode="Linear"/>
		</storyboard>
		<storyboard event="activatePrev">
			<animation property="scaleOrigin" to="0 0" mode="Linear"/>
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="600" duration="500" mode="linear"/>
			<animation property="pos" to="0.5 0.5" begin="100" duration="" mode="Linear"/>			
			<animation property="scale" from="0" to="3" begin="600" duration="500" mode="Linear"/>
			<animation property="pos" to="0.85 0.5" begin="1250" duration="500" mode="Linear"/>
			<animation property="scale" from="2.5" to="1" begin="1250" duration="500" mode="Linear"/>
			<!-- <animation property="scale" from="1" to="1.1" begin="2000" duration="2500" mode="easeIn"/> -->
			<!-- <animation property="rotation" from="0" to="720" begin="5000" duration="1000" mode="easeOut"/> -->
			<!-- <animation property="scale" from="1.1" to="1" begin="5000" duration="1000" mode="linear"/> -->
		</storyboard>
		</image>
		<!-- ################ Artwork2 ##################### -->
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<linearSmooth>true</linearSmooth>
			<pos>0.177604166666667 0.30</pos>
			<maxSize>0.45 0.55</maxSize>			
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open" repeatAt="2000">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="800" mode="Linear"/>
				<animation property="scale" from="20" to="1" begin="1000" autoreverse="false" duration="800" mode="easeOut"/>
				<animation property="origin" to="0.53 0.51" begin="2000" duration="3000" mode="easeinOut"/>
				<animation property="origin" to="0.50 0.500" begin="5000" duration="3000" mode="easeinout"/>
				<animation property="origin" to="0.54 0.505" begin="8000" duration="3000" mode="easeinout"/>
				<animation property="origin" to="0.50 0.500" begin="11000" duration="2000" mode="easeinout"/>
				<animation property="origin" to="0.505 0.53" begin="13000" duration="2000" autoreverse="true" mode="easeinout"/>
			</storyboard>
			<storyboard event="activateNext" repeatAt="2000">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="800" mode="Linear"/>
				<animation property="scale" from="20" to="1" begin="1000" autoreverse="false" duration="800" mode="easeOut"/>
				<animation property="origin" to="0.53 0.51" begin="2000" duration="3000" mode="easeinOut"/>
				<animation property="origin" to="0.50 0.500" begin="5000" duration="3000" mode="easeinout"/>
				<animation property="origin" to="0.54 0.505" begin="8000" duration="3000" mode="easeinout"/>
				<animation property="origin" to="0.50 0.500" begin="11000" duration="2000" mode="easeinout"/>
				<animation property="origin" to="0.505 0.53" begin="13000" duration="2000" autoreverse="true" mode="easeinout"/>
			</storyboard>
			<storyboard event="activatePrev" repeatAt="2000">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="800" mode="Linear"/>
				<animation property="scale" from="20" to="1" begin="1000" autoreverse="false" duration="800" mode="easeOut"/>
				<animation property="origin" to="0.53 0.51" begin="2000" duration="3000" mode="easeinOut"/>
				<animation property="origin" to="0.50 0.500" begin="5000" duration="3000" mode="easeinout"/>
				<animation property="origin" to="0.54 0.505" begin="8000" duration="3000" mode="easeinout"/>
				<animation property="origin" to="0.50 0.500" begin="11000" duration="2000" mode="easeinout"/>
				<animation property="origin" to="0.505 0.53" begin="13000" duration="2000" autoreverse="true" mode="easeinout"/>
			</storyboard>
		</image>
		<!-- ################ Artwork3 ##################### -->
		<image name="Artwork3" extra="true">
			<path>./Artwork3.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.871614583333333 0.193518518518519</pos>
			<size>0.246354166666667 0.318518518518519</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="0.5" begin="2000" duration="" mode="Linear"/>
				<animation property="opacity" from="0.5" to="0.8" begin="2000" duration="1375" autoreverse="true" repeat="4" mode="Linear"/>
				<animation property="offsetX" to="0" begin="2500" duration="" mode="linear"/>
				<animation property="offsetY" to="0" begin="2500" duration="" mode="linear"/>
				<animation property="offsetX" from="-1" to="0.5" begin="2000" duration="5500" autoreverse="true" mode="easeIn"/>
				<animation property="offsetY" from="-0.8" to="0.8" begin="2000" duration="11000" mode="linear"/>
				<animation property="rotation" from="-50" to="50" begin="2000" duration="5500" autoreverse="true" mode="easeInOut"/>
			</storyboard>
			<storyboard event="activateNext" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="0.5" begin="2000" duration="" mode="Linear"/>
				<animation property="opacity" from="0.5" to="0.8" begin="2000" duration="1375" autoreverse="true" repeat="4" mode="Linear"/>
				<animation property="offsetX" to="0" begin="2500" duration="" mode="linear"/>
				<animation property="offsetY" to="0" begin="2500" duration="" mode="linear"/>
				<animation property="offsetX" from="-1" to="0.5" begin="2000" duration="5500" autoreverse="true" mode="easeIn"/>
				<animation property="offsetY" from="-0.8" to="0.8" begin="2000" duration="11000" mode="linear"/>
				<animation property="rotation" from="-50" to="50" begin="2000" duration="5500" autoreverse="true" mode="easeInOut"/>
			</storyboard>
			<storyboard event="activatePrev" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="0.5" begin="2000" duration="" mode="Linear"/>
				<animation property="opacity" from="0.5" to="0.8" begin="2000" duration="1375" autoreverse="true" repeat="4" mode="Linear"/>
				<animation property="offsetX" to="0" begin="2500" duration="" mode="linear"/>
				<animation property="offsetY" to="0" begin="2500" duration="" mode="linear"/>
				<animation property="offsetX" from="-1" to="0.5" begin="2000" duration="5500" autoreverse="true" mode="easeIn"/>
				<animation property="offsetY" from="-0.8" to="0.8" begin="2000" duration="11000" mode="linear"/>
				<animation property="rotation" from="-50" to="50" begin="2000" duration="5500" autoreverse="true" mode="easeInOut"/>
			</storyboard>
		</image>
		<!-- ################ Artwork4 ##################### -->
		<image name="Artwork4" extra="true">
			<path>./Artwork4.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.448697916666667 0.219444444444444</pos>
			<size>0.246354166666667 0.318518518518519</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee : D->G # -->
			<storyboard event="open" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="0.8" begin="3500" duration="500" mode="Linear"/>
				<animation property="opacity" from="0.8" to="0.4" begin="3500" duration="1500" autoreverse="true" repeat="3" mode="Linear"/>
				<animation property="offsetX" to="0" begin="3500" duration="" mode="linear"/>
				<animation property="offsetY" to="0" begin="3500" duration="" mode="linear"/>
				<animation property="offsetX" from="0.5" to="-0.5" begin="3500" duration="4500" autoreverse="true" mode="easeOut"/>
				<animation property="offsetY" from="-0.8" to="0.7" begin="3500" duration="9000" mode="linear"/>
				<animation property="rotation" from="-80" to="80" begin="3500" duration="4500" autoreverse="true" mode="easeInOut"/>
			</storyboard>
			<storyboard event="activateNext" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="0.8" begin="3500" duration="500" mode="Linear"/>
				<animation property="opacity" from="0.8" to="0.4" begin="3500" duration="1500" autoreverse="true" repeat="3" mode="Linear"/>
				<animation property="offsetX" to="0" begin="3500" duration="" mode="linear"/>
				<animation property="offsetY" to="0" begin="3500" duration="" mode="linear"/>
				<animation property="offsetX" from="0.5" to="-0.5" begin="3500" duration="4500" autoreverse="true" mode="easeOut"/>
				<animation property="offsetY" from="-0.8" to="0.7" begin="3500" duration="9000" mode="linear"/>
				<animation property="rotation" from="-80" to="80" begin="3500" duration="4500" autoreverse="true" mode="easeInOut"/>
			</storyboard>
			<storyboard event="activatePrev" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="0.8" begin="3500" duration="500" mode="Linear"/>
				<animation property="opacity" from="0.8" to="0.4" begin="3500" duration="1500" autoreverse="true" repeat="3" mode="Linear"/>
				<animation property="offsetX" to="0" begin="3500" duration="" mode="linear"/>
				<animation property="offsetY" to="0" begin="3500" duration="" mode="linear"/>
				<animation property="offsetX" from="0.5" to="-0.5" begin="3500" duration="4500" autoreverse="true" mode="easeOut"/>
				<animation property="offsetY" from="-0.8" to="0.7" begin="3500" duration="9000" mode="linear"/>
				<animation property="rotation" from="-80" to="80" begin="3500" duration="4500" autoreverse="true" mode="easeInOut"/>
			</storyboard>
		</image>
		<!-- ################ Bezel autour de la video ##################### -->
		<image name="Videobezel" extra="true">
			<path>./videov.png</path>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<pos>0.527 0.495</pos>
			<size>0.322 0.755</size>
			<zIndex>190</zIndex>
		</image>
		<!-- ################ La video ##################### -->
		<video name="PreviewVid" extra="true">
			<visible>true</visible>
			<path>{game:video}</path>
			<maxSize>0.46 0.70</maxSize>
			<minSize>0.45 0.5</minSize>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<delay>0.4</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<effect>none</effect>
			<pos>0.525 0.49</pos>
			<zIndex>180</zIndex>
		</video>
		<!-- ################ Animations du bezel video et de la video si identique ##################### -->
		<!-- # Arriv e : D->G # -->
		<control name="PreviewVid,Videobezel">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1500" mode="easeIn"/>
				<animation property="offsetY" from="1" to="0" begin="1000" duration="2500" mode="easeOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1500" mode="easeIn"/>
				<animation property="offsetY" from="1" to="0" begin="1000" duration="2500" mode="easeOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1500" mode="easeIn"/>
				<animation property="offsetY" from="1" to="0" begin="1000" duration="2500" mode="easeOut"/>
			</storyboard>
		</control>
		<!-- ################ Animation de sortie des artworks ##################### -->
		<control name="Artwork4">
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
				<animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
				<animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
			</storyboard>
		</control>
		<control name="Artwork1, Artwork2, Artwork3, PreviewVid,Videobezel">
			<storyboard event="deactivateNext">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
		</control>
		<image name="md_cartridge" extra="true">
			<visible>false</visible>
		</image>
		<image name="md_boxart">
			<visible>false</visible>
		</image>
	</customView>
</theme>