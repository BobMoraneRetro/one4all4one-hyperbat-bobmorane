<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<!-- ################ Fond du theme ##################### -->
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<pos>0.5 0.5</pos>
			<size>1 1.35</size>
			<origin>0.5 0.5</origin>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork1 ##################### -->
		<image name="Artwork1" extra="true">
			<path>./1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>175</zIndex>
			<pos>0.5 0.5</pos>
			<maxSize>2 3</maxSize>
			<rotationOrigin>0.5 1</rotationOrigin>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="800" mode="Linear"/>
				<animation property="rotation" from="0" to="-70" begin="200" duration="5000" autoreverse="true" repeat="forever" mode="EaseInOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="800" mode="Linear"/>
				<animation property="rotation" from="0" to="-70" begin="200" duration="5000" autoreverse="true" repeat="forever" mode="EaseInOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="800" mode="Linear"/>
				<animation property="rotation" from="0" to="-70" begin="200" duration="5000" autoreverse="true" repeat="forever" mode="EaseInOut"/>
			</storyboard>
		</image>
		<!-- ################ Artwork2 ##################### -->
		<image name="Artwork2" extra="true">
			<path>./1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>175</zIndex>
			<pos>0.5 0.5</pos>
			<maxSize>1.5 3</maxSize>
			<rotationOrigin>1 1</rotationOrigin>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="800" mode="Linear"/>
				<animation property="rotation" from="20" to="-10" begin="200" duration="3000" autoreverse="true" repeat="forever" mode="EaseInOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="800" mode="Linear"/>
				<animation property="rotation" from="20" to="-10" begin="200" duration="3000" autoreverse="true" repeat="forever" mode="EaseInOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="800" mode="Linear"/>
				<animation property="rotation" from="20" to="-10" begin="200" duration="3000" autoreverse="true" repeat="forever" mode="EaseInOut"/>
			</storyboard>
		</image>
		<image name="Artwork21" extra="true">
			<path>./1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>175</zIndex>
			<pos>0.5 0.5</pos>
			<maxSize>2 3</maxSize>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="800" mode="Linear"/>
				<animation property="rotation" from="0" to="360" begin="200" duration="12000"  repeat="forever" mode="linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="800" mode="Linear"/>
				<animation property="rotation" from="0" to="360" begin="200" duration="12000"  repeat="forever" mode="linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="800" mode="Linear"/>
				<animation property="rotation" from="0" to="360" begin="200" duration="12000"  repeat="forever" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork3 ##################### -->
		<image name="Artwork3" extra="true">
			<path>./Artwork3.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.921614583333333 0.855</pos>
			<size>0.0723958333333333 0.140740740740741</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="2050" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="3500" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4000" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4200" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4400" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4600" duration="500" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="4800" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="2050" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="3500" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4000" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4200" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4400" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4600" duration="500" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="4800" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="2050" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="3500" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4000" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4200" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4400" duration="500" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4600" duration="500" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="4800" duration="500" mode="Linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork4 ##################### -->
		<image name="Artwork4" extra="true">
			<path>./Artwork4.png</path>
			<scaleOrigin>0 0</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.297135416666667 0.350462962962963</pos>
			<size>0.581770833333333 0.634259259259259</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee : D->G # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="scale" from="0" to="1" begin="650" duration="500" mode="bump"/>
				<animation property="scale" from="1" to="1.1" begin="1150" duration="120" autoreverse="true" mode="linear"/>
				<animation property="scale" from="1" to="1.05" begin="1270" duration="120" autoreverse="true" mode="linear"/>
				<animation property="offsetY" from="0.7" to="0" begin="650" duration="500" mode="bump"/>
				<animation property="offsetY" from="0" to="-0.03" begin="1150" duration="120" autoreverse="true" mode="linear"/>
				<animation property="offsetY" from="0" to="-0.01" begin="1270" duration="120" autoreverse="true" mode="linear"/>
				<animation property="scale" from="1" to="1.05" begin="1510" duration="1500" autoreverse="true" repeat="forever" mode="easeIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="scale" from="0" to="1" begin="650" duration="500" mode="bump"/>
				<animation property="scale" from="1" to="1.1" begin="1150" duration="120" autoreverse="true" mode="linear"/>
				<animation property="scale" from="1" to="1.05" begin="1270" duration="120" autoreverse="true" mode="linear"/>
				<animation property="offsetY" from="0.7" to="0" begin="650" duration="500" mode="bump"/>
				<animation property="offsetY" from="0" to="-0.03" begin="1150" duration="120" autoreverse="true" mode="linear"/>
				<animation property="offsetY" from="0" to="-0.01" begin="1270" duration="120" autoreverse="true" mode="linear"/>
				<animation property="scale" from="1" to="1.05" begin="1510" duration="1500" autoreverse="true" repeat="forever" mode="easeIn"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="scale" from="0" to="1" begin="650" duration="500" mode="bump"/>
				<animation property="scale" from="1" to="1.1" begin="1150" duration="120" autoreverse="true" mode="linear"/>
				<animation property="scale" from="1" to="1.05" begin="1270" duration="120" autoreverse="true" mode="linear"/>
				<animation property="offsetY" from="0.7" to="0" begin="650" duration="500" mode="bump"/>
				<animation property="offsetY" from="0" to="-0.03" begin="1150" duration="120" autoreverse="true" mode="linear"/>
				<animation property="offsetY" from="0" to="-0.01" begin="1270" duration="120" autoreverse="true" mode="linear"/>
				<animation property="scale" from="1" to="1.05" begin="1510" duration="1500" autoreverse="true" repeat="forever" mode="easeIn"/>
			</storyboard>
		</image>
		<!-- ################ Bezel autour de la video ##################### -->
		<image name="Videobezel" extra="true">
			<path>./video.png</path>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<pos>0.748177083333333 0.422222222222222</pos>
			<size>0.347395833333333 0.794444444444444</size>
			<zIndex>190</zIndex>
		</image>
		<!-- ################ La video ##################### -->
		<video name="PreviewVid" extra="true">
			<visible>true</visible>
			<path>{game:video}</path>
			<maxSize>0.46 0.705</maxSize>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<delay>0.4</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<effect>none</effect>
			<pos>0.748177083333333 0.422222222222222</pos>
			<zIndex>180</zIndex>
		</video>
		<!-- ################ Animations du bezel video et de la video si identique ##################### -->
		<!-- # Arriv e : D->G # -->
		<control name="PreviewVid,Videobezel">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="1000" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="650" duration="1000" mode="EaseOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="1000" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="650" duration="1000" mode="EaseOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="1000" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="650" duration="1000" mode="EaseOut"/>
			</storyboard>
		</control>
		<!-- ################ Animation de sortie des artworks ##################### -->
		<control name="Artwork1, Artwork2, Artwork21, Artwork3, Artwork4, PreviewVid,Videobezel">
			<storyboard event="deactivateNext">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
		</control>
		<image name="md_cartridge" extra="true">
			<visible>false</visible>
		</image>
		<image name="md_boxart">
			<visible>false</visible>
		</image>
	</customView>
</theme>