<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<!-- ################ Fond du theme ##################### -->
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork1 ##################### -->
		<image name="Artwork1" extra="true">
			<path>./Artwork1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>170</zIndex>
			<pos>0.508854166666667 0.497222222222222</pos>
			<size>0.773958333333333 1.03888888888889</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="300" duration="700" mode="easeIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="300" duration="700" mode="easeIn"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="300" duration="700" mode="easeIn"/>
			</storyboard>
		</image>
		<!-- ################ Artwork2 ##################### -->
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>250</zIndex>
			<pos>0.442708333333333 0.5</pos>
			<size>0.355208333333333 1</size>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open" repeatAt="500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="3000" duration="1500" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="8000" duration="1500" mode="linear"/>
			</storyboard>
			<storyboard event="activateNext" repeatAt="500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="3000" duration="1500" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="8000" duration="1500" mode="linear"/>
			</storyboard>
			<storyboard event="activatePrev" repeatAt="500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="3000" duration="1500" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="8000" duration="1500" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork3 ##################### -->
		<image name="Artwork3" extra="true">
			<path>./Artwork3.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>220</zIndex>
			<pos>0.786197916666667 0.7265</pos>
			<size>0.1828125 0.475</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open" repeatAt="500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="0.8" begin="500" duration="500" mode="linear"/>
				<animation property="opacity" from="0.8" to="0.5" begin="1000" duration="300" autoreverse="true" repeat="4" mode="linear"/>
				<animation property="opacity" from="0.8" to="0" begin="3400" duration="600" mode="easeIn"/>
				<animation property="opacity"  to="0" begin="4000" duration="5500" mode="linear"/>
			</storyboard>
			<storyboard event="activateNext" repeatAt="500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="0.8" begin="500" duration="500" mode="linear"/>
				<animation property="opacity" from="0.8" to="0.5" begin="1000" duration="300" autoreverse="true" repeat="4" mode="linear"/>
				<animation property="opacity" from="0.8" to="0" begin="3400" duration="600" mode="easeIn"/>
				<animation property="opacity"  to="0" begin="4000" duration="5500" mode="linear"/>
			</storyboard>
			<storyboard event="activatePrev" repeatAt="500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="0.8" begin="500" duration="500" mode="linear"/>
				<animation property="opacity" from="0.8" to="0.5" begin="1000" duration="300" autoreverse="true" repeat="4" mode="linear"/>
				<animation property="opacity" from="0.8" to="0" begin="3400" duration="600" mode="easeIn"/>
				<animation property="opacity"  to="0" begin="4000" duration="5500" mode="linear"/>
			</storyboard>
		</image>
