			<zIndex>200</zIndex>
			<pos>0.81953125 0.10787037037037</pos>
			<size>0.202604166666667 0.10462962962963</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2300" duration="1200" mode="easeIn"/>
				<animation property="offsetX" from="0.5" to="0" begin="1300" duration="2200" mode="EaseOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2300" duration="1200" mode="easeIn"/>
				<animation property="offsetX" from="0.5" to="0" begin="1300" duration="2200" mode="EaseOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2300" duration="1200" mode="easeIn"/>
				<animation property="offsetX" from="0.5" to="0" begin="1300" duration="2200" mode="EaseOut"/>
