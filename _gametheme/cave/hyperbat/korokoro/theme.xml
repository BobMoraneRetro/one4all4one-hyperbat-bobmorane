<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<!-- ################ Fond du theme ##################### -->
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork1 ##################### -->
		<image name="Artwork1" extra="true">
			<path>./Artwork1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.2375 0.57037037037037</pos>
			<size>0.475 0.857407407407407</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
				<animation property="offsetX" from="-0.5" to="0" duration="2000" mode="EaseOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
				<animation property="offsetX" from="-0.5" to="0" duration="2000" mode="EaseOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
				<animation property="offsetX" from="-0.5" to="0" duration="2000" mode="EaseOut"/>
			</storyboard>
		</image>
		<!-- ################ Artwork2 ##################### -->
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.828125 0.731944444444445</pos>
			<size>0.139583333333333 0.582407407407407</size>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="700" duration="1000" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="700" duration="2000" mode="EaseOutCubic"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="700" duration="1000" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="700" duration="2000" mode="EaseOutCubic"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="700" duration="1000" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="700" duration="2000" mode="EaseOutCubic"/>
			</storyboard>
		</image>
		<!-- ################ Artwork3 ##################### -->
		<image name="Artwork3" extra="true">
			<path>./Artwork3.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.829166666666667 0.730092592592593</pos>
			<size>0.155208333333333 0.586111111111111</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2000" duration="800" mode="Linear"/>
				<animation property="opacity" from="1" to="0.4" begin="2800" duration="1000" autoreverse="true" repeat="forever" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2000" duration="800" mode="Linear"/>
				<animation property="opacity" from="1" to="0.4" begin="2800" duration="1000" autoreverse="true" repeat="forever" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2000" duration="800" mode="Linear"/>
				<animation property="opacity" from="1" to="0.4" begin="2800" duration="1000" autoreverse="true" repeat="forever" mode="Linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork4 ##################### -->
		<image name="Artwork4" extra="true">
			<path>./Artwork4.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<pos>0.495833333333333 0.152777777777778</pos>
			<size>0.194791666666667 0.25</size>
			<!-- # Arrivee : D->G # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="offsetY" from="-0.5" to="0" begin="" duration="2000" mode="easeOut"/>
				<animation property="rotation" from="0" to="3600" begin="" duration="2000" mode="easeOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="offsetY" from="-0.5" to="0" begin="" duration="2000" mode="easeOut"/>
				<animation property="rotation" from="0" to="3600" begin="" duration="2000" mode="easeOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="offsetY" from="-0.5" to="0" begin="" duration="2000" mode="easeOut"/>
				<animation property="rotation" from="0" to="3600" begin="" duration="2000" mode="easeOut"/>
			</storyboard>
		</image>
		<!-- ################ Bezel autour de la video ##################### -->
		<image name="Videobezel" extra="true">
			<path>./video.png</path>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<pos>0.6234375 0.490740740740741</pos>
			<size>0.42 0.57</size>
			<zIndex>190</zIndex>
		</image>
		<!-- ################ La video ##################### -->
		<video name="PreviewVid" extra="true">
			<visible>true</visible>
			<path>{game:video}</path>
			<maxSize>0.39 0.68</maxSize>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<delay>0.4</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<effect>none</effect>
			<pos>0.6234375 0.490740740740741</pos>
			<zIndex>180</zIndex>
		</video>
		<!-- ################ Animations du bezel video et de la video si identique ##################### -->
		<!-- # Arriv e : D->G # -->
		<control name="PreviewVid,Videobezel">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1300" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="1300" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1300" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="1300" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1300" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="1300" duration="500" mode="Linear"/>
			</storyboard>
		</control>
		<!-- ################ Animation de sortie des artworks ##################### -->
		<control name="Artwork1, Artwork2, Artwork3, Artwork4, PreviewVid,Videobezel">
			<storyboard event="deactivateNext">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
		</control>
		<image name="md_cartridge" extra="true">
			<visible>false</visible>
		</image>
		<image name="md_boxart">
			<visible>false</visible>
		</image>
	</customView>
</theme>