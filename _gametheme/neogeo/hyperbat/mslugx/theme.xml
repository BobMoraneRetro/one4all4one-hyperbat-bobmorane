<?xml version="1.0" encoding="UTF-8"?>


<theme defaultView="hyperbat">
<formatVersion>7</formatVersion>
<view name="detailed, gamecarousel">

<!-- ################ Fond du theme ##################### -->

<image name="Background" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>100</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="deactivateNext">
       	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
      	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
</image>

<image name="Background2" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>130</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="open">
       	<animation property="opacity" from="0" to="0.7" begin="500" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activatePrev">
       	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="deactivateNext">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
</image>

<!-- ################ Artwork1 ##################### -->

<!-- ################ Artwork2 ##################### -->
<image name="Artwork2" extra="true">
	<path>./Artwork2.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.2703125 0.227314814814815</pos>
	<size>0.444791666666667 0.391666666666667</size>

<!-- # Tombe et rebondit # -->
<storyboard event="open">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="1770" duration="500" mode="Linear"/>
	<animation property="offsetY" from="-1" to="0" begin="1770" duration="400" mode="linear"/>
	<animation property="offsetY" from="0" to="-0.06" begin="2170" duration="350" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.038" begin="2870" duration="250" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.024" begin="3370" duration="140" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.009" begin="3650" duration="60" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.0025" begin="3770" duration="20" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="0" begin="3810" duration="2500" mode="Linear" autoReverse="true"/>
</storyboard>
<storyboard event="activateNext">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="1770" duration="500" mode="Linear"/>
	<animation property="offsetY" from="-1" to="0" begin="1770" duration="400" mode="linear"/>
	<animation property="offsetY" from="0" to="-0.06" begin="2170" duration="350" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.038" begin="2870" duration="250" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.024" begin="3370" duration="140" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.009" begin="3650" duration="60" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.0025" begin="3770" duration="20" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="0" begin="3810" duration="2500" mode="Linear" autoReverse="true"/>
</storyboard>
<storyboard event="activatePrev">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="1370" duration="500" mode="Linear"/>
	<animation property="offsetY" from="-1" to="0" begin="1370" duration="400" mode="linear"/>
	<animation property="offsetY" from="0" to="-0.06" begin="1770" duration="350" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.038" begin="2470" duration="250" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.024" begin="2970" duration="140" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.009" begin="3250" duration="60" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="-0.0025" begin="3370" duration="20" mode="EaseOutCubic" autoReverse="true"/>
	<animation property="offsetY" from="0" to="0" begin="3410" duration="2500" mode="Linear" autoReverse="true"/>
</storyboard>
</image>

<!-- ################ Artwork3 ##################### -->
<image name="Artwork3" extra="true">
	<path>./Artwork3.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.738541666666667 0.568518518518519</pos>
	<size>0.522916666666667 0.833333333333333</size>

<!-- # Arrivee : G->D # -->
<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" begin="650" duration="500" mode="Linear"/>
</storyboard>
<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" begin="650" duration="500" mode="Linear"/>
</storyboard>
<storyboard event="activatePrev">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" begin="650" duration="500" mode="Linear"/>
</storyboard>
</image>

<!-- ################ Artwork4 ##################### -->

<!-- ################ Bezel autour de la video ##################### -->
<image name="Videobezel" extra="true">
	<path>./video.png</path>
	<origin>0.5 0.5</origin>
	<pos>0.2609375 0.658796296296296</pos>
	<size>0.411458333333333 0.556481481481481</size>
	<zIndex>190</zIndex>
</image>

<!-- ################ La video ##################### -->
<video name="PreviewVid" extra="true">
	<visible>true</visible>
	<path>{game:video}</path>
	<maxSize>0.46 0.5</maxSize>
	<minSize>0.45 0.5</minSize>
	<origin>0.5 0.5</origin>
	<delay>0.3</delay>
	<showSnapshotNoVideo>false</showSnapshotNoVideo>
	<showSnapshotDelay>false</showSnapshotDelay>
	<effect>none</effect>
	<pos>0.2609375 0.658796296296296</pos>
	<zIndex>180</zIndex>
</video>

<!-- ################ Animations du bezel video et de la video si identique ##################### -->
<!-- # Arrivée : D->G # -->
<control name="PreviewVid,Videobezel">
<storyboard event="open">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
			<animation property="offsetX" from="-1" to="0" begin="650" duration="800" mode="Linear"/>
			<animation property="offsetY" from="1" to="0" begin="650" duration="800" mode="Linear"/>
			<animation property="rotation" from="0" to="1080" begin="650" duration="800" mode="EasyOut"/>
</storyboard>
<storyboard event="activateNext">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
			<animation property="offsetX" from="-1" to="0" begin="650" duration="800" mode="Linear"/>
			<animation property="offsetY" from="1" to="0" begin="650" duration="800" mode="Linear"/>
			<animation property="rotation" from="0" to="1080" begin="650" duration="800" mode="EasyOut"/>
</storyboard>
<storyboard event="activatePrev">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
			<animation property="offsetX" from="-1" to="0" begin="650" duration="800" mode="Linear"/>
			<animation property="offsetY" from="1" to="0" begin="650" duration="800" mode="Linear"/>
			<animation property="rotation" from="0" to="1080" begin="650" duration="800" mode="EasyOut"/>
</storyboard>
</control>

<!-- ################ Animation de sortie des artworks ##################### -->
<control name="Artwork4">
<storyboard event="deactivateNext">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
<storyboard event="deactivatePrev">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
</control>

<control name="Artwork1, Artwork2, Artwork3, PreviewVid,Videobezel">
<storyboard event="deactivateNext">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
<storyboard event="deactivatePrev">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
</control>
<image name="md_cartridge" extra="true">
<visible>false</visible>
</image>
<image name="md_boxart">
<visible>false</visible>
</image>
</view>
</theme>
