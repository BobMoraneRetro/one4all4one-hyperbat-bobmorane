		<animation property="offsetX" from="-1" to="0" begin="2250" duration="1000" mode="bump"/>
		<animation property="offsetX" from="0" to="0.1" begin="3250" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="0.05" begin="3490" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="0.02" begin="3730" duration="100" autoreverse="true" mode="EasyOutCubic"/>
	</storyboard>
</image>

<!-- ################ Artwork3 ##################### -->
<image name="Artwork3" extra="true">
	<path>./Artwork3.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.517708333333333 0.155092592592593</pos>
	<size>0.417708333333333 0.163888888888889</size>

<!-- # Arrivee Centrale Zoom puis dezoom en position # -->
