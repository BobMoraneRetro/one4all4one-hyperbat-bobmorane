		</storyboard>
		<storyboard event="activatePrev">
			<animation property="scaleOrigin" to="0 0" mode="Linear"/>
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="600" duration="500" mode="linear"/>
			<animation property="pos" from="0.517708333333333 0.155092592592593" to="0.519010416666667 0.5" mode="EasyOut"/>			
			<animation property="scale" from="0" to="3" begin="600" duration="800" mode="EasyIn"/>
			<animation property="pos" from="0.519010416666667 0.5" to="0.519010416666667 0.155555555555556" begin="1500" duration="1000" mode="EasyOut"/>
			<animation property="scale" from="3" to="1" begin="1500" duration="1000" mode="Linear"/>
