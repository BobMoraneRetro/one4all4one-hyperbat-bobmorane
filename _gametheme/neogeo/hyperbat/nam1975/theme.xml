	<pos>0.05234375 0.102777777777778</pos>
	<size>0.0609375 0.2</size>

<!-- # Arrivee : D->G # -->
<storyboard event="open" repeatAt="1">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="2650" duration="500" mode="Linear"/>
