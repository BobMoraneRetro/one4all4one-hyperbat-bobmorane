<?xml version="1.0" encoding="UTF-8"?>


<theme defaultView="hyperbat">
<formatVersion>7</formatVersion>
<view name="detailed, gamecarousel">

<!-- ################ Fond du theme ##################### -->

<image name="Background" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>100</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="deactivateNext">
               		<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
                	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
</image>

<image name="Background2" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>130</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	
	<storyboard event="open">
         	<animation property="opacity" from="0" to="0.7" begin="500" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	                <animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
		</storyboard>
	<storyboard event="activatePrev">
                	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="deactivateNext">
			<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
			<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
</image>

<!-- ################ Artwork1 ##################### -->

<image name="Artwork1" extra="true">
	<path>./Artwork1.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.2867 0.5</pos>
	<size>0.5734 1</size>
	
</image>

<!-- ################ Artwork2 ##################### -->
<image name="Artwork2" extra="true">
	<path>./Artwork2.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.26484375 0.181944444444444</pos>
	<size>0.350520833333333 0.363888888888889</size>

<storyboard event="open">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="800" duration="800" mode="Linear"/>
    <animation property="scale" from="0" to="1.1" begin="800" autoreverse="false" duration="500" mode="EaseIn"/>
	<animation property="scale" from="1.1" to="0.95" begin="1300" autoreverse="false" duration="300" mode="bump"/>
	<animation property="scale" from="0.95" to="1.02" begin="1600" autoreverse="false" duration="200" mode="bump"/>
	<animation property="scale" from="1.02" to="1" begin="1800" autoreverse="false" duration="100" mode="bump"/>
</storyboard>
<storyboard event="activateNext">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="800" duration="800" mode="Linear"/>
    <animation property="scale" from="0" to="1.1" begin="800" autoreverse="false" duration="500" mode="EaseIn"/>
	<animation property="scale" from="1.1" to="0.95" begin="1300" autoreverse="false" duration="300" mode="bump"/>
	<animation property="scale" from="0.95" to="1.02" begin="1600" autoreverse="false" duration="200" mode="bump"/>
	<animation property="scale" from="1.02" to="1" begin="1800" autoreverse="false" duration="100" mode="bump"/>
</storyboard>
<storyboard event="activatePrev">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="800" duration="800" mode="Linear"/>
    <animation property="scale" from="0" to="1.1" begin="800" autoreverse="false" duration="500" mode="EaseIn"/>
	<animation property="scale" from="1.1" to="0.95" begin="1300" autoreverse="false" duration="300" mode="bump"/>
	<animation property="scale" from="0.95" to="1.02" begin="1600" autoreverse="false" duration="200" mode="bump"/>
	<animation property="scale" from="1.02" to="1" begin="1800" autoreverse="false" duration="100" mode="bump"/>
</storyboard>
</image>

