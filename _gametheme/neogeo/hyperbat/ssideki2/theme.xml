<?xml version="1.0" encoding="UTF-8"?>


<theme defaultView="hyperbat">
<formatVersion>7</formatVersion>
<view name="detailed, gamecarousel">

<!-- ################ Fond du theme ##################### -->

<image name="Background" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>100</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="deactivateNext">
       	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
      	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
</image>

<image name="Background2" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>130</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="open">
       	<animation property="opacity" from="0" to="0.7" begin="500" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activatePrev">
       	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="deactivateNext">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
</image>


<!-- ################ Artwork1 ##################### -->
<image name="Artwork1" extra="true">
	<path>./Artwork1.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.789583333333333 0.698148148148148</pos>
	<size>0.435416666666667 0.603703703703704</size>

<!-- # Apparition # -->
	<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1200" duration="500" mode="Linear"/>
		<animation property="offsetX" from="0.5" to="0" begin="1200" duration="650" mode="EaseOutCubic"/>
		<animation property="offsetY" from="0.2" to="0" begin="1200" duration="650" mode="EaseOutCubic"/>
		<animation property="scaleOrigin" to="0 0" begin="1200" duration="" mode="EasyOutCubic"/>
		<animation property="scale" from="0.6" to="1" begin="1200" autoreverse="false" duration="650" mode="EaseOut"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1200" duration="500" mode="Linear"/>
		<animation property="offsetX" from="0.5" to="0" begin="1200" duration="650" mode="EaseOutCubic"/>
		<animation property="offsetY" from="0.2" to="0" begin="1200" duration="650" mode="EaseOutCubic"/>
		<animation property="scaleOrigin" to="0 0" begin="1200" duration="" mode="EasyOutCubic"/>
		<animation property="scale" from="0.6" to="1" begin="1200" autoreverse="false" duration="650" mode="EaseOut"/>
	</storyboard>
	<storyboard event="activatePrev">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1200" duration="500" mode="Linear"/>
		<animation property="offsetX" from="0.5" to="0" begin="1200" duration="650" mode="EaseOutCubic"/>
		<animation property="offsetY" from="0.2" to="0" begin="1200" duration="650" mode="EaseOutCubic"/>
		<animation property="scaleOrigin" to="0 0" begin="1200" duration="" mode="EasyOutCubic"/>
		<animation property="scale" from="0.6" to="1" begin="1200" autoreverse="false" duration="650" mode="EaseOut"/>
	</storyboard>
</image>

<!-- ################ Artwork2 ##################### -->
<image name="Artwork2" extra="true">
	<path>./Artwork2.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.0888020833333333 0.947222222222222</pos>
	<size>0.1046875 0.0481481481481481</size>

<!-- # Arrivee : G->D # -->
	<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1500" duration="1000" mode="Linear"/>
		<animation property="offsetY" from="0.5" to="0" begin="1500" duration="1000" mode="Linear"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1500" duration="1000" mode="Linear"/>
		<animation property="offsetY" from="0.5" to="0" begin="1500" duration="1000" mode="Linear"/>
	</storyboard>
	<storyboard event="activatePrev">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1500" duration="1000" mode="Linear"/>
		<animation property="offsetY" from="0.5" to="0" begin="1500" duration="1000" mode="Linear"/>
	</storyboard>
</image>

<!-- ################ Artwork3 ##################### -->
<image name="Artwork3" extra="true">
	<path>./Artwork3.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.517447916666667 0.236111111111111</pos>
	<size>0.397395833333333 0.438888888888889</size>

<!-- # Arrivee en Bump  # -->
<storyboard event="open">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="1250" duration="500" mode="Linear"/>
    <animation property="scale" from="0" to="1" begin="1250" duration="500" mode="bump"/>
	<animation property="scale" from="1" to="1.1" begin="1750" duration="120" autoreverse="true" mode="EasyOutCubic"/>
	<animation property="scale" from="1" to="1.05" begin="1870" duration="120" autoreverse="true" mode="EasyOutCubic"/>
</storyboard>
<storyboard event="activateNext">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="1250" duration="500" mode="Linear"/>
    <animation property="scale" from="0" to="1" begin="1250" duration="500" mode="bump"/>
	<animation property="scale" from="1" to="1.1" begin="1750" duration="120" autoreverse="true" mode="EasyOutCubic"/>
	<animation property="scale" from="1" to="1.05" begin="1870" duration="120" autoreverse="true" mode="EasyOutCubic"/>
</storyboard>
<storyboard event="activatePrev">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="1250" duration="500" mode="Linear"/>
    <animation property="scale" from="0" to="1" begin="1250" duration="500" mode="bump"/>
	<animation property="scale" from="1" to="1.1" begin="1750" duration="120" autoreverse="true" mode="EasyOutCubic"/>
	<animation property="scale" from="1" to="1.05" begin="1870" duration="120" autoreverse="true" mode="EasyOutCubic"/>
</storyboard>
</image>

<!-- ################ Artwork4 ##################### -->
<image name="Artwork4" extra="true">
	<path>./Artwork4.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.925 0.125</pos>
	<size>0.125 0.222222222222222</size>
	<linearSmooth>true</linearSmooth>

<!-- # Traverse ecran en cloche # -->
<storyboard event="open" repeatAt="1">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1500" duration="500" mode="Linear"/>
		<animation property="offsetX" from="0.2" to="-1.3" begin="1500" duration="2200" mode="Linear"/>
		<animation property="offsetY" from="1" to="0" begin="1500" duration="500" mode="EaseOut"/>
		<animation property="offsetY" from="0" to="1" begin="2000" duration="1000" mode="EaseIn"/>
		<animation property="scale" from="0.3" to="1.2" begin="1500" duration="2000" mode="Linear"/>
		<animation property="rotation" from="0" to="2160" begin="1500" duration="2500" mode="EaseIn"/>
</storyboard>
<storyboard event="activateNext" repeatAt="1">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1500" duration="500" mode="Linear"/>
		<animation property="offsetX" from="0.2" to="-1.3" begin="1500" duration="2200" mode="Linear"/>
		<animation property="offsetY" from="1" to="0" begin="1500" duration="500" mode="EaseOut"/>
		<animation property="offsetY" from="0" to="1" begin="2000" duration="1000" mode="EaseIn"/>
		<animation property="scale" from="0.3" to="1.2" begin="1500" duration="2000" mode="Linear"/>
		<animation property="rotation" from="0" to="2160" begin="1500" duration="2500" mode="EaseIn"/>
</storyboard>
<storyboard event="activatePrev" repeatAt="1500">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1500" duration="500" mode="Linear"/>
		<animation property="offsetX" from="0.2" to="-1.3" begin="1500" duration="2200" mode="Linear"/>
		<animation property="offsetY" from="1" to="0" begin="1500" duration="500" mode="EaseOut"/>
		<animation property="offsetY" from="0" to="1" begin="2000" duration="1000" mode="EaseIn"/>
		<animation property="scale" from="0.3" to="1.2" begin="1500" duration="2000" mode="Linear"/>
		<animation property="rotation" from="0" to="2160" begin="1500" duration="2500" mode="EaseIn"/>
</storyboard>
</image>

<!-- ################ Bezel autour de la video ##################### -->
<image name="Videobezel" extra="true">
	<path>./video.png</path>
	<origin>0.5 0.5</origin>
	<rotationOrigin>0.5 0.5</rotationOrigin>
	<pos>0.280989583333333 0.619444444444444</pos>
	<size>0.403645833333333 0.546296296296296</size>
	<!-- <rotation>-8</rotation> -->
	<zIndex>190</zIndex>
</image>

<!-- ################ La video ##################### -->
<video name="PreviewVid" extra="true">
	<visible>true</visible>
	<path>{game:video}</path>
	<maxSize>0.46 0.5</maxSize>
	<minSize>0.45 0.5</minSize>
	<origin>0.5 0.5</origin>
	<rotationOrigin>0.5 0.5</rotationOrigin>
	<delay>0.3</delay>
	<showSnapshotNoVideo>false</showSnapshotNoVideo>
	<showSnapshotDelay>false</showSnapshotDelay>
	<effect>none</effect>
	<pos>0.280989583333333 0.619444444444444</pos>
	<!-- <rotation>-8</rotation> -->
	<zIndex>180</zIndex>
</video>

<!-- ################ Animations du bezel video et de la video si identique ##################### -->
<!-- # Arriv e : D->G # -->
<control name="PreviewVid,Videobezel">
<storyboard event="open">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
			<animation property="offsetX" from="-1" to="0" begin="650" duration="500" mode="Linear"/>
</storyboard>
<storyboard event="activateNext">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
			<animation property="offsetX" from="-1" to="0" begin="650" duration="500" mode="Linear"/>
</storyboard>
<storyboard event="activatePrev">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
			<animation property="offsetX" from="-1" to="0" begin="650" duration="500" mode="Linear"/>
</storyboard>
</control>

<!-- ################ Animation de sortie des artworks ##################### -->
<control name="Artwork4">
<storyboard event="deactivateNext">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
<storyboard event="deactivatePrev">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
</control>

<control name="Artwork1, Artwork2, Artwork3, PreviewVid,Videobezel">
<storyboard event="deactivateNext">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
<storyboard event="deactivatePrev">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
</control>
<image name="md_cartridge" extra="true">
<visible>false</visible>
</image>
<image name="md_boxart">
<visible>false</visible>
</image>
</view>
</theme>
