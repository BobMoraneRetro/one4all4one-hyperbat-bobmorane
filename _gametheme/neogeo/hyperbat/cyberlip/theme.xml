<?xml version="1.0" encoding="UTF-8"?>


<theme defaultView="hyperbat">
<formatVersion>7</formatVersion>
<view name="detailed, gamecarousel">

<!-- ################ Fond du theme ##################### -->

<image name="Background" extra="true">
<path>./background.png</path>
<pos>0.5 0.5</pos>
<size>1 1</size>
<origin>0.5 0.5</origin>
<zIndex>100</zIndex>
<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="deactivateNext">
   		<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
       	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
</image>

<!-- ################ Artwork1 ##################### -->

<image name="Artwork1" extra="true">
	<path>./Artwork1.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.248697916666667 0.1625</pos>
	<size>0.447395833333333 0.29537037037037</size>

<!-- # Arrivee H->B Sweet # -->
<storyboard event="open">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="250" duration="500" mode="Linear"/>
	<animation property="offsetY" from="-1" to="0" duration="4000" mode="EaseOutQuint"/>
</storyboard>
<storyboard event="activateNext">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="250" duration="1000" mode="Linear"/>
	<animation property="offsetY" from="-1" to="0" duration="4000" mode="EaseOutQuint"/>
</storyboard>
<storyboard event="activatePrev">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="250" duration="1000" mode="Linear"/>
	<animation property="offsetY" from="-1" to="0" duration="4000" mode="EaseOutQuint"/>
</storyboard>
</image>

<!-- ################ Artwork2 ##################### -->
<image name="Artwork2" extra="true">
	<path>./Artwork2.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<zIndex>200</zIndex>

<!-- # Arrivee : G->D # -->
	<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="300" duration="1500" mode="Linear"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="300" duration="1500" mode="Linear"/>
	</storyboard>
	<storyboard event="activatePrev">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="300" duration="1500" mode="Linear"/>
	</storyboard>
</image>

<!-- ################ Artwork3 ##################### -->
<image name="Artwork3" extra="true">
	<path>./Artwork3.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.2921875 0.719907407407407</pos>
	<size>0.510416666666667 0.408333333333333</size>

<!-- # Arrivee en Bump  # -->
	<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1250" duration="500" mode="Linear"/>
		<animation property="offsetY" from="-1" to="0" begin="1250" duration="500" mode="bump"/>
		<animation property="offsetY" from="0" to="0.1" begin="1750" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetY" from="0" to="0.05" begin="1990" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetY" from="0" to="0.02" begin="2230" duration="100" autoreverse="true" mode="EasyOutCubic"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1250" duration="500" mode="Linear"/>
		<animation property="offsetY" from="-1" to="0" begin="1250" duration="500" mode="bump"/>
		<animation property="offsetY" from="0" to="0.1" begin="1750" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetY" from="0" to="0.05" begin="1990" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetY" from="0" to="0.02" begin="2230" duration="100" autoreverse="true" mode="EasyOutCubic"/>
	</storyboard>
	<storyboard event="activatePrev">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1250" duration="500" mode="Linear"/>
		<animation property="offsetY" from="-1" to="0" begin="1250" duration="500" mode="bump"/>
		<animation property="offsetY" from="0" to="0.1" begin="1750" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetY" from="0" to="0.05" begin="1990" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetY" from="0" to="0.02" begin="2230" duration="100" autoreverse="true" mode="EasyOutCubic"/>
	</storyboard>
</image>

<!-- ################ Artwork4 ##################### -->
<image name="Artwork4" extra="true">
	<path>./Artwork4.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.893489583333333 0.8875</pos>
	<size>0.168229166666667 0.102777777777778</size>
	<linearSmooth>true</linearSmooth>

<!-- # Arrivee : G->D et rebond forever # -->
		<storyboard event="open">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="1050" duration="500" mode="Linear"/>
			<animation property="scaleOrigin" to="0 0" begin="1050" duration="" mode="Linear"/>
			<animation property="scale" from="0" to="1" begin="1050" duration="500" mode="EaseOut"/>
			<animation property="scale" from="1" to="1.04" begin="1550" autoreverse="true" duration="600" repeat="forever" mode="EaseInCubic"/>
			</storyboard>
		<storyboard event="activateNext">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="1050" duration="500" mode="Linear"/>
			<animation property="scaleOrigin" to="0 0" begin="1050" duration="" mode="Linear"/>
			<animation property="scale" from="0" to="1" begin="1050" duration="500" mode="EaseOut"/>
			<animation property="scale" from="1" to="1.04" begin="1550" autoreverse="true" duration="600" repeat="forever" mode="EaseInCubic"/>
		</storyboard>
		<storyboard event="activatePrev">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="1050" duration="500" mode="Linear"/>
			<animation property="scaleOrigin" to="0 0" begin="1050" duration="" mode="Linear"/>
			<animation property="scale" from="0" to="1" begin="1050" duration="500" mode="EaseOut"/>
			<animation property="scale" from="1" to="1.04" begin="1550" autoreverse="true" duration="600" repeat="forever" mode="EaseInCubic"/>
		</storyboard>
</image>

<!-- ################ Bezel autour de la video ##################### -->
<image name="Videobezel" extra="true">
	<path>./video.png</path>
	<origin>0.5 0.5</origin>
	<rotationOrigin>0.5 0.5</rotationOrigin>
	<pos>0.220833333333333 0.415740740740741</pos>
	<size>0.416666666666667 0.568518518518519</size>
	<rotation>-20</rotation>
	<zIndex>190</zIndex>
</image>

<!-- ################ La video ##################### -->
<video name="PreviewVid" extra="true">
	<visible>true</visible>
	<path>{game:video}</path>
	<maxSize>0.46 0.5</maxSize>
	<minSize>0.45 0.5</minSize>
	<origin>0.5 0.5</origin>
	<rotationOrigin>0.5 0.5</rotationOrigin>
	<delay>0.3</delay>
	<showSnapshotNoVideo>false</showSnapshotNoVideo>
	<showSnapshotDelay>false</showSnapshotDelay>
	<effect>none</effect>
	<pos>0.220833333333333 0.415740740740741</pos>
	<rotation>-20</rotation>
	<zIndex>180</zIndex>
</video>

<!-- ################ Animations du bezel video et de la video si identique ##################### -->
<!-- # Arriv e : D->G # -->
<control name="PreviewVid,Videobezel">
<storyboard event="open">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="800" duration="1000" mode="Linear"/>
			<animation property="offsetX" from="-1" to="0" begin="800" duration="1000" mode="Linear"/>
</storyboard>
<storyboard event="activateNext">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="800" duration="1000" mode="Linear"/>
			<animation property="offsetX" from="-1" to="0" begin="800" duration="1000" mode="Linear"/>
</storyboard>
<storyboard event="activatePrev">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="800" duration="1000" mode="Linear"/>
			<animation property="offsetX" from="-1" to="0" begin="800" duration="1000" mode="Linear"/>
</storyboard>
</control>

<!-- ################ Animation de sortie des artworks ##################### -->
<control name="Artwork4">
<storyboard event="deactivateNext">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
<storyboard event="deactivatePrev">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
</control>

<control name="Artwork1, Artwork2, Artwork3, PreviewVid,Videobezel">
<storyboard event="deactivateNext">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
<storyboard event="deactivatePrev">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
</control>
<image name="md_cartridge" extra="true">
<visible>false</visible>
</image>
<image name="md_boxart">
<visible>false</visible>
</image>
</view>
</theme>
