			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
			<animation property="offsetY" from="1" to="0" begin="650" duration="500" mode="EasyOut"/>
			<animation property="w" from="0.491666666666667" to="0.8" begin="1500" autoreverse="true" duration="100" mode="EaseIn"/>
			<animation property="h" from="0.572222222222222" to="0.7" begin="1650" autoreverse="true" duration="100" mode="EaseOut"/>
