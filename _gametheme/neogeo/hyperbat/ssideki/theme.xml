	<animation property="scale" from="0" to="1" begin="2000" duration="700" mode="linear"/>
	<animation property="rotation" from="0" to="1440" begin="2000" duration="700" mode="EaseIn"/>
</storyboard>
</image>

<!-- ################ Artwork4 ##################### -->
<image name="Artwork4" extra="true">
	<path>./Artwork4.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.421875 0.297222222222222</pos>
	<size>0.491666666666667 0.572222222222222</size>

