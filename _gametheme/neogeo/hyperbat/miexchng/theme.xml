<?xml version="1.0" encoding="UTF-8"?>


<theme defaultView="hyperbat">
<formatVersion>7</formatVersion>
<view name="detailed, gamecarousel">

<!-- ################ Fond du theme ##################### -->

<image name="Background" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>100</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="deactivateNext">
       	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
      	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
</image>

<image name="Background2" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>130</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="open">
       	<animation property="opacity" from="0" to="0.7" begin="500" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activatePrev">
       	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="deactivateNext">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
</image>

<!-- ################ Artwork1 ##################### -->

<image name="Artwork1" extra="true">
	<path>./Artwork1.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.521354166666667 0.15</pos>
	<size>0.409375 0.190740740740741</size>

<!-- # Tombe et rebondit # -->
<storyboard event="open">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
			<animation property="offsetY" from="-1" to="0.1" begin="1000" duration="600" mode="EasyOutQuint"/>
			<animation property="offsetY" from="0.1" to="0" begin="1600" duration="300" mode="Bump"/>
			<animation property="size" from="0.4765625 0.222222222222222" to="0.3 0.222222222222222" begin="1900" duration="100" autoreverse="false" mode="bump"/>
			<animation property="size" from="0.3 0.222222222222222" to="0.6 0.222222222222222" begin="1900" duration="300" autoreverse="false" mode="bump"/>
			<animation property="size" from="0.6 0.222222222222222" to="0.40 0.222222222222222" begin="2200" duration="300" autoreverse="false" mode="bump"/>
			<animation property="size" from="0.4 0.222222222222222" to="0.4765625 0.222222222222222" begin="2500" duration="500" autoreverse="false" mode="bump"/>
</storyboard>
<storyboard event="activateNext">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
			<animation property="offsetY" from="-1" to="0.1" begin="1000" duration="600" mode="EasyOutQuint"/>
			<animation property="offsetY" from="0.1" to="0" begin="1600" duration="300" mode="Bump"/>
			<animation property="size" from="0.4765625 0.222222222222222" to="0.3 0.222222222222222" begin="1900" duration="100" autoreverse="false" mode="bump"/>
			<animation property="size" from="0.3 0.222222222222222" to="0.6 0.222222222222222" begin="1900" duration="300" autoreverse="false" mode="bump"/>
			<animation property="size" from="0.6 0.222222222222222" to="0.40 0.222222222222222" begin="2200" duration="300" autoreverse="false" mode="bump"/>
			<animation property="size" from="0.4 0.222222222222222" to="0.4765625 0.222222222222222" begin="2500" duration="500" autoreverse="false" mode="bump"/>
</storyboard>
<storyboard event="activatePrev">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
			<animation property="offsetY" from="-1" to="0.1" begin="1000" duration="600" mode="EasyOutQuint"/>
			<animation property="offsetY" from="0.1" to="0" begin="1600" duration="300" mode="Bump"/>
			<animation property="size" from="0.4765625 0.222222222222222" to="0.3 0.222222222222222" begin="1900" duration="100" autoreverse="false" mode="bump"/>
			<animation property="size" from="0.3 0.222222222222222" to="0.6 0.222222222222222" begin="1900" duration="300" autoreverse="false" mode="bump"/>
			<animation property="size" from="0.6 0.222222222222222" to="0.40 0.222222222222222" begin="2200" duration="300" autoreverse="false" mode="bump"/>
			<animation property="size" from="0.4 0.222222222222222" to="0.4765625 0.222222222222222" begin="2500" duration="500" autoreverse="false" mode="bump"/>
</storyboard>
</image>

<!-- ################ Artwork2 ##################### -->
<image name="Artwork2" extra="true">
	<path>./Artwork2.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.271875 0.646296296296296</pos>
	<size>0.433333333333333 0.707407407407407</size>

<!-- # Arrivee D->G Sweet # -->
<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
