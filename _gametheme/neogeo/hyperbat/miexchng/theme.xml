		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="600" duration="1000" mode="Linear"/>
		<animation property="origin"  to="0 0" mode="Linear"/>
		<animation property="pos"  to="0.06 0.3" mode="Linear"/>
		<animation property="size" from="0 0" to="0.433333333333333 0.7074074074074070" begin="600" duration="800" mode="EaseOutQuint"/>
</storyboard>
<storyboard event="activatePrev">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="600" duration="1000" mode="Linear"/>
		<animation property="origin"  to="0 0" mode="Linear"/>
		<animation property="pos"  to="0.06 0.3" mode="Linear"/>
		<animation property="size" from="0 0" to="0.433333333333333 0.7074074074074070" begin="600" duration="800" mode="EaseOutQuint"/>
</storyboard>
</image>

<!-- ################ Artwork3 ##################### -->
<image name="Artwork3" extra="true">
	<path>./artwork3.png</path>
	<pos>0.55 0.3</pos>
	<origin>0.5 0.5</origin>
	<size>1 0.253703703703704</size>
	<linearSmooth>true</linearSmooth>
