<?xml version="1.0" encoding="UTF-8"?>


<theme defaultView="hyperbat">
<formatVersion>7</formatVersion>
<view name="detailed, gamecarousel">

<!-- ################ Fond du theme ##################### -->

<image name="Background" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>100</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="deactivateNext">
       	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
      	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
</image>

<image name="Background2" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>130</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="open">
       	<animation property="opacity" from="0" to="0.7" begin="500" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activatePrev">
       	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="deactivateNext">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
</image>

<!-- ################ Artwork1 ##################### -->
<image name="Artwork1" extra="true">
	<path>./Artwork1.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.526822916666667 0.206481481481481</pos>
	<size>0.983854166666667 0.318518518518519</size>

<!-- # Arrivee G->D Sweet # -->
<storyboard event="open">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="250" duration="1000" mode="Linear"/>
	<animation property="offsetX" from="1" to="0" duration="1500" mode="EaseOutQuint"/>
</storyboard>
<storyboard event="activateNext">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="250" duration="1000" mode="Linear"/>
	<animation property="offsetX" from="1" to="0" duration="1500" mode="EaseOutQuint"/>
</storyboard>
<storyboard event="activatePrev">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="250" duration="1000" mode="Linear"/>
	<animation property="offsetX" from="1" to="0" duration="1500" mode="EaseOutQuint"/>
</storyboard>
</image>

<!-- ################ Artwork2 ##################### -->
<image name="Artwork2" extra="true">
<path>./.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.3234375 0.206018518518519</pos>
	<size>0.459375 0.412037037037037</size>

<!-- # Zoom et bump repetition lente # -->
<storyboard event="open">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
	<animation property="scale" from="0" to="1" begin="500" duration="500" mode="Linear"/>
    <animation property="padding" from="0" to="10" begin="1000" duration="1500" autoreverse="true" repeat="forever" mode="easeOut"/>
</storyboard>
<storyboard event="activateNext">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
	<animation property="scale" from="0" to="1" begin="500" duration="500" mode="Linear"/>
    <animation property="padding" from="0" to="10" begin="1000" duration="1500" autoreverse="true" repeat="forever" mode="easeOut"/>
</storyboard>
<storyboard event="activatePrev">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
	<animation property="scale" from="0" to="1" begin="500" duration="500" mode="Linear"/>
    <animation property="padding" from="0" to="10" begin="1000" duration="1500" autoreverse="true" repeat="forever" mode="easeOut"/>
</storyboard>

</image>

<!-- ################ Artwork3 ##################### -->
<image name="Artwork3" extra="true">
	<path>./Artwork3.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.621875 0.5</pos>
	<size>0.75625 1</size>

<!-- # Apparition # -->
<storyboard event="open">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="800" duration="1000" mode="Linear"/>
	<animation property="scale" to="1" begin="800" autoreverse="false" duration="1000" mode="easyIn"/>
</storyboard>
<storyboard event="activateNext">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="800" duration="1000" mode="Linear"/>
	<animation property="scale" to="1" begin="800" autoreverse="false" duration="1000" mode="easyIn"/>
</storyboard>
<storyboard event="activatePrev">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="800" duration="1000" mode="Linear"/>
	<animation property="scale" to="1" begin="800" autoreverse="false" duration="1000" mode="easyIn"/>
</storyboard>
</image>

<!-- ################ Artwork4 ##################### -->
<image name="Artwork4" extra="true">
	<path>./Artwork4.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.6421875 0.659259259259259</pos>
	<size>0.332291666666667 0.32962962962963</size>

<!-- # Arrive.Flotte.rotation.senva  # -->
<storyboard event="open" repeatAt="1">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="rotation" to="0" begin="2" autoreverse="false" mode="Linear"/>
		<animation property="pos" from="-1 -1" to="0.6421875 0.659259259259259" duration="1500" mode="easyOut"/>
		<animation property="opacity" from="0" to="1" duration="500" mode="linear"/>
		<animation property="origin" to="0.53 0.505" begin="500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.50 0.500" begin="2500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.53 0.505" begin="4500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.50 0.500" begin="6500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.53 0.53" begin="8500" duration="2000" mode="bump"/>
		<animation property="rotation" to="80" begin="9700" autoreverse="false" duration="800" mode="easeIn"/>
		<animation property="pos" to="-0.5 2" begin="10500" duration="1000" mode="easyOut"/>
		<animation property="opacity" from="1" to="0" begin="10500" duration="1000" mode="linear"/>
</storyboard>
<storyboard event="activateNext" repeatAt="1">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="rotation" to="0" begin="2" autoreverse="false" mode="Linear"/>
		<animation property="pos" from="-1 -1" to="0.6421875 0.659259259259259" duration="1500" mode="easyOut"/>
		<animation property="opacity" from="0" to="1" duration="500" mode="linear"/>
		<animation property="origin" to="0.53 0.505" begin="500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.50 0.500" begin="2500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.53 0.505" begin="4500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.50 0.500" begin="6500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.53 0.53" begin="8500" duration="2000" mode="bump"/>
		<animation property="rotation" to="80" begin="9700" autoreverse="false" duration="800" mode="easeIn"/>
		<animation property="pos" to="-0.5 2" begin="10500" duration="1000" mode="easyOut"/>
		<animation property="opacity" from="1" to="0" begin="10500" duration="1000" mode="linear"/>
</storyboard>
<storyboard event="activatePrev" repeatAt="1">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="rotation" to="0" begin="2" autoreverse="false" mode="Linear"/>
		<animation property="pos" from="-1 -1" to="0.6421875 0.659259259259259" duration="1500" mode="easyOut"/>
		<animation property="opacity" from="0" to="1" duration="500" mode="linear"/>
		<animation property="origin" to="0.53 0.505" begin="500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.50 0.500" begin="2500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.53 0.505" begin="4500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.50 0.500" begin="6500" duration="2000" mode="bump"/>
		<animation property="origin" to="0.53 0.53" begin="8500" duration="2000" mode="bump"/>
		<animation property="rotation" to="80" begin="9700" autoreverse="false" duration="800" mode="easeIn"/>
		<animation property="pos" to="-0.5 2" begin="10500" duration="1000" mode="easyOut"/>
		<animation property="opacity" from="1" to="0" begin="10500" duration="1000" mode="linear"/>
</storyboard>
</image>

<!-- ################ Bezel autour de la video ##################### -->
<image name="Videobezel" extra="true">
	<path>./video.png</path>
	<origin>0.5 0.5</origin>
	<pos>0.222916666666667 0.662962962962963</pos>
	<size>0.40625 0.55</size>
	<zIndex>190</zIndex>
</image>

<!-- ################ La video ##################### -->
<video name="PreviewVid" extra="true">
	<visible>true</visible>
	<path>{game:video}</path>
	<maxSize>0.46 0.5</maxSize>
	<minSize>0.45 0.5</minSize>
	<origin>0.5 0.5</origin>
	<delay>0.3</delay>
	<showSnapshotNoVideo>false</showSnapshotNoVideo>
	<showSnapshotDelay>false</showSnapshotDelay>
	<effect>none</effect>
	<pos>0.222916666666667 0.662962962962963</pos>
	<zIndex>180</zIndex>
</video>

<!-- ################ Animations du bezel video et de la video si identique ##################### -->
<!-- # Arrivée : D->G # -->
<control name="PreviewVid,Videobezel">
<storyboard event="open">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="1500" mode="Linear"/>
</storyboard>
<storyboard event="activateNext">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="1500" mode="Linear"/>
</storyboard>
<storyboard event="activatePrev">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="1500" mode="Linear"/>
</storyboard>
</control>

<!-- ################ Animation de sortie des artworks ##################### -->
<control name="Artwork4">
<storyboard event="deactivateNext">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
<storyboard event="deactivatePrev">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
</control>

<control name="Artwork1, Artwork2, Artwork3, PreviewVid,Videobezel">
<storyboard event="deactivateNext">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
<storyboard event="deactivatePrev">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
</control>
<image name="md_cartridge" extra="true">
<visible>false</visible>
</image>
<image name="md_boxart">
<visible>false</visible>
</image>
</view>
</theme>
