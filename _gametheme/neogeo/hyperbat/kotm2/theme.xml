<?xml version="1.0" encoding="UTF-8"?>


<theme defaultView="hyperbat">
<formatVersion>7</formatVersion>
<view name="detailed, gamecarousel">

<!-- ################ Fond du theme ##################### -->

<image name="Background" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>100</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="deactivateNext">
       	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
      	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
</image>

<image name="Background2" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>130</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="open">
       	<animation property="opacity" from="0" to="0.7" begin="500" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activatePrev">
       	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="deactivateNext">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
</image>

<!-- ################ Artwork1 ##################### -->
<image name="Artwork1" extra="true">
	<path>./Artwork1.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.27421875 0.5</pos>
	<size>0.441145833333333 1</size>

<!-- # Apparition # -->
<storyboard event="open">
        <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1650" duration="800" mode="Linear"/>
		<animation property="scale" to="1" begin="1650" autoreverse="false" duration="800" mode="easyIn"/>
</storyboard>
<storyboard event="activateNext">
        <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1650" duration="800" mode="Linear"/>
		<animation property="scale" to="1" begin="1650" autoreverse="false" duration="800" mode="easyIn"/>
</storyboard>
<storyboard event="activatePrev">
        <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1650" duration="800" mode="Linear"/>
		<animation property="scale" to="1" begin="1650" autoreverse="false" duration="800" mode="easyIn"/>
</storyboard>
</image>

<!-- ################ Artwork2 ##################### -->
<image name="Artwork2" extra="true">
	<path>./Artwork2.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.274479166666667 0.256481481481481</pos>
	<size>0.497916666666667 0.512962962962963</size>

<!-- # Arrivee en Bump  Gauche droite-->
	<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="750" duration="500" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" begin="750" duration="500" mode="bump"/>
		<animation property="offsetX" from="0" to="0.1" begin="1250" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="0.05" begin="1490" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="0.02" begin="1730" duration="100" autoreverse="true" mode="EasyOutCubic"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="750" duration="500" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" begin="750" duration="500" mode="bump"/>
		<animation property="offsetX" from="0" to="0.1" begin="1250" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="0.05" begin="1490" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="0.02" begin="1730" duration="100" autoreverse="true" mode="EasyOutCubic"/>
	</storyboard>
	<storyboard event="activatePrev">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="750" duration="500" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" begin="750" duration="500" mode="bump"/>
		<animation property="offsetX" from="0" to="0.1" begin="1250" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="0.05" begin="1490" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="0.02" begin="1730" duration="100" autoreverse="true" mode="EasyOutCubic"/>
	</storyboard>
</image>

<!-- ################ Artwork3 ##################### -->
<image name="Artwork3" extra="true">
	<path>./Artwork3.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.878645833333333 0.087037037037037</pos>
	<size>0.192708333333333 0.0814814814814815</size>

<!-- # Arrivee D->G Sweet # -->
<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="2000" duration="1000" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" duration="3500" mode="EaseOutQuint"/>
</storyboard>
<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="2000" duration="1000" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" duration="3500" mode="EaseOutQuint"/>
</storyboard>
<storyboard event="activatePrev">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="2000" duration="1000" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" duration="3500" mode="EaseOutQuint"/>
</storyboard>
</image>

<!-- ################ Artwork4 ##################### -->

<!-- ################ Bezel autour de la video ##################### -->
<image name="Videobezel" extra="true">
	<path>./video.png</path>
	<origin>0.5 0.5</origin>
	<rotationOrigin>0.5 0.5</rotationOrigin>
	<pos>0.7375 0.527314814814815</pos>
	<size>0.411458333333333 0.556481481481481</size>
	<rotation>10</rotation>
	<zIndex>210</zIndex>
</image>

<!-- ################ La video ##################### -->
<video name="PreviewVid" extra="true">
	<visible>true</visible>
	<path>{game:video}</path>
	<maxSize>0.46 0.5</maxSize>
	<minSize>0.45 0.5</minSize>
	<origin>0.5 0.5</origin>
	<rotationOrigin>0.5 0.5</rotationOrigin>
	<delay>0.3</delay>
	<showSnapshotNoVideo>false</showSnapshotNoVideo>
	<showSnapshotDelay>false</showSnapshotDelay>
	<effect>none</effect>
	<pos>0.7375 0.527314814814815</pos>
	<rotation>10</rotation>
	<zIndex>200</zIndex>
</video>

<!-- ################ Animations du bezel video et de la video si identique ##################### -->
<!-- # Arrivée : D->G # -->
<control name="PreviewVid,Videobezel">
<storyboard event="open">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="750" duration="500" mode="EaseIn"/>
			<animation property="offsetX" from="1" to="0" begin="750" duration="500" mode="EaseOut"/>
</storyboard>
<storyboard event="activateNext">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="750" duration="500" mode="EaseIn"/>
			<animation property="offsetX" from="1" to="0" begin="750" duration="500" mode="EaseOut"/>
</storyboard>
<storyboard event="activatePrev">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="750" duration="500" mode="EaseIn"/>
			<animation property="offsetX" from="1" to="0" begin="750" duration="500" mode="EaseOut"/>
</storyboard>
</control>

<!-- ################ Animation de sortie des artworks ##################### -->
<control name="Artwork4">
<storyboard event="deactivateNext">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
<storyboard event="deactivatePrev">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
</control>

<control name="Artwork1, Artwork2, Artwork3, PreviewVid,Videobezel">
<storyboard event="deactivateNext">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
<storyboard event="deactivatePrev">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
</control>
<image name="md_cartridge" extra="true">
<visible>false</visible>
</image>
<image name="md_boxart">
<visible>false</visible>
</image>
</view>
</theme>
