				<animation property="scale" from="0" to="1" begin="1300" autoreverse="false" duration="800" mode="easyIn"/>
</storyboard>

</image>

<!-- ################ Artwork4 ##################### -->
<image name="Artwork4" extra="true">
	<path>./Artwork4.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.6953125 0.940277777777778</pos>
	<size>0.138541666666667 0.0787037037037037</size>
	
<!-- # Arrivee D->G Sweet # -->
<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="250" duration="1000" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" duration="4000" mode="EaseOutQuint"/>
