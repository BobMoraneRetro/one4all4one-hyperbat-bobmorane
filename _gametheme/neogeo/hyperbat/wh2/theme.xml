<?xml version="1.0" encoding="UTF-8"?>


<theme defaultView="hyperbat">
<formatVersion>7</formatVersion>
<view name="detailed, gamecarousel">

<!-- ################ Fond du theme ##################### -->

<image name="Background" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>100</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="deactivateNext">
       	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
      	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
</image>

<image name="Background2" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>130</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="open">
       	<animation property="opacity" from="0" to="0.7" begin="500" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activatePrev">
       	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="deactivateNext">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
</image>

<!-- ################ Artwork1 ##################### -->
<image name="Artwork1" extra="true">
	<path>./Artwork1.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.730729166666667 0.5</pos>
	<size>0.538541666666667 1</size>

<!-- # Arrivee : G->D # -->
<storyboard event="open">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
	<animation property="offsetX" from="1" to="0" begin="500" duration="800" mode="Linear"/>
</storyboard>
<storyboard event="activateNext">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
	<animation property="offsetX" from="1" to="0" begin="500" duration="800" mode="Linear"/>
</storyboard>
<storyboard event="activatePrev">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
	<animation property="offsetX" from="1" to="0" begin="500" duration="800" mode="Linear"/>
</storyboard>
</image>

<!-- ################ Artwork2 ##################### -->
<image name="Artwork2" extra="true">
	<path>./Artwork2.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.291666666666667 0.246296296296296</pos>
	<size>0.365625 0.457407407407407</size>

<!-- # Arrivee en DeZoom  -->
<storyboard event="open">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
	<animation property="scale" from="7" to="1" begin="500" autoreverse="false" duration="800" mode="easyIn"/>
	<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="linear"/>
</storyboard>
<storyboard event="activateNext">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
	<animation property="scale" from="7" to="1" begin="500" autoreverse="false" duration="800" mode="easyIn"/>
	<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="linear"/>
</storyboard>
<storyboard event="activatePrev">
	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="500" duration="800" mode="Linear"/>
	<animation property="scale" from="7" to="1" begin="500" autoreverse="false" duration="800" mode="easyIn"/>
	<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="linear"/>
</storyboard>
</image>

<!-- ################ Artwork3 ##################### -->
<image name="Artwork3" extra="true">
	<path>./Artwork3.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.75078125 0.5</pos>
	<size>0.347395833333333 1</size>

<!-- # Arrivee en Bump D -> G # -->
<storyboard event="open">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="1500" duration="300" mode="Linear"/>
    <animation property="offsetX" from="1" to="0" begin="1500" duration="500" mode="bump"/>
	<animation property="offsetX" from="0" to="-0.05" begin="2000" duration="120" autoreverse="true" mode="EasyOutCubic"/>
	<animation property="offsetX" from="0" to="-0.02" begin="2120" duration="120" autoreverse="true" mode="EasyOutCubic"/>
</storyboard>
<storyboard event="activateNext">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="1500" duration="300" mode="Linear"/>
    <animation property="offsetX" from="1" to="0" begin="1500" duration="500" mode="bump"/>
	<animation property="offsetX" from="0" to="-0.05" begin="2000" duration="120" autoreverse="true" mode="EasyOutCubic"/>
	<animation property="offsetX" from="0" to="-0.02" begin="2120" duration="120" autoreverse="true" mode="EasyOutCubic"/>
</storyboard>
<storyboard event="activatePrev">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="1500" duration="300" mode="Linear"/>
    <animation property="offsetX" from="1" to="0" begin="1500" duration="500" mode="bump"/>
	<animation property="offsetX" from="0" to="-0.05" begin="2000" duration="120" autoreverse="true" mode="EasyOutCubic"/>
	<animation property="offsetX" from="0" to="-0.02" begin="2120" duration="120" autoreverse="true" mode="EasyOutCubic"/>
</storyboard>
</image>

<!-- ################ Artwork4 ##################### -->
<image name="Artwork4" extra="true">
	<path>./Artwork4.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.6953125 0.940277777777778</pos>
	<size>0.138541666666667 0.0787037037037037</size>
	
<!-- # Arrivee : D->G # -->
<storyboard event="open">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
			<animation property="offsetX" from="1" to="0" begin="650" duration="500" mode="Linear"/>
</storyboard>
<storyboard event="activateNext">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
			<animation property="offsetX" from="1" to="0" begin="650" duration="500" mode="Linear"/>
</storyboard>
<storyboard event="activatePrev">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
			<animation property="offsetX" from="1" to="0" begin="650" duration="500" mode="Linear"/>
</storyboard>
</image>

<!-- ################ Bezel autour de la video ##################### -->
<image name="Videobezel" extra="true">
	<path>./video.png</path>
	<origin>0.5 0.5</origin>
	<rotationOrigin>0.5 0.5</rotationOrigin>
	<pos>0.291927083333333 0.702777777777778</pos>
	<size>0.403645833333333 0.546296296296296</size>
	<!-- <rotation>-8</rotation> -->
	<zIndex>190</zIndex>
</image>

<!-- ################ La video ##################### -->
<video name="PreviewVid" extra="true">
	<visible>true</visible>
	<path>{game:video}</path>
	<maxSize>0.46 0.5</maxSize>
	<minSize>0.45 0.5</minSize>
	<origin>0.5 0.5</origin>
	<rotationOrigin>0.5 0.5</rotationOrigin>
	<delay>0.3</delay>
	<showSnapshotNoVideo>false</showSnapshotNoVideo>
	<showSnapshotDelay>false</showSnapshotDelay>
	<effect>none</effect>
	<pos>0.291927083333333 0.702777777777778</pos>
	<!-- <rotation>-8</rotation> -->
	<zIndex>180</zIndex>
</video>

<!-- ################ Animations du bezel video et de la video si identique ##################### -->
<!-- # Arriv e : D->G # -->
<control name="PreviewVid,Videobezel">
<!-- # Arrivee : D->G # -->
<storyboard event="open">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
			<animation property="offsetY" from="1" to="0" begin="1000" duration="500" mode="Linear"/>
</storyboard>
<storyboard event="activateNext">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
			<animation property="offsetY" from="1" to="0" begin="1000" duration="500" mode="Linear"/>
</storyboard>
<storyboard event="activatePrev">
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
			<animation property="offsetY" from="1" to="0" begin="1000" duration="500" mode="Linear"/>
</storyboard>
</control>

<!-- ################ Animation de sortie des artworks ##################### -->
<control name="Artwork4">
<storyboard event="deactivateNext">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
<storyboard event="deactivatePrev">
                <animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
                <animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
</storyboard>
</control>

<control name="Artwork1, Artwork2, Artwork3, PreviewVid,Videobezel">
<storyboard event="deactivateNext">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
<storyboard event="deactivatePrev">
	<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
	<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
</storyboard>
</control>
<image name="md_cartridge" extra="true">
<visible>false</visible>
</image>
<image name="md_boxart">
<visible>false</visible>
</image>
</view>
</theme>
