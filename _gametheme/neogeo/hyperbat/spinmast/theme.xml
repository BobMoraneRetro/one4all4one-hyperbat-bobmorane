		</storyboard>
		<storyboard event="activateNext" >
			<animation property="scaleOrigin" to="0 0" mode="Linear"/>
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="600" duration="500" mode="linear"/>		
			<animation property="scale" from="0" to="2.5" begin="600" duration="500" mode="EasyIn"/>
			<animation property="pos" to="0.506770833333333 0.530092592592593" begin="1250" duration="500" mode="EasyOut"/>
			<animation property="scale" from="2.5" to="1" begin="1250" duration="500" mode="Linear"/>
		</storyboard>
		<storyboard event="activatePrev">
			<animation property="scaleOrigin" to="0 0" mode="Linear"/>
			<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
			<animation property="opacity" from="0" to="1" begin="600" duration="500" mode="linear"/>		
			<animation property="scale" from="0" to="2.5" begin="600" duration="500" mode="EasyIn"/>
			<animation property="pos" to="0.506770833333333 0.530092592592593" begin="1250" duration="500" mode="EasyOut"/>
			<animation property="scale" from="2.5" to="1" begin="1250" duration="500" mode="Linear"/>
		</storyboard>

</image>

<!-- ################ Artwork4 ##################### -->
<image name="Artwork4" extra="true">
<path>./Artwork4.png</path>
<scaleOrigin>-0.3 -0.3</scaleOrigin>
<origin>0.5 0.5</origin>
<zIndex>220</zIndex>
<pos>0.280208333333333 0.214814814814815</pos>
<size>0.389583333333333 0.340740740740741</size>

<!-- # Arrivee en Bump D -> G # -->
<storyboard event="open">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="600" duration="500" mode="Linear"/>
    <animation property="offsetX" from="-1" to="0" begin="600" duration="1150" mode="bump"/>
	<animation property="offsetX" from="0" to="0.05" begin="1750" duration="120" autoreverse="true" mode="EasyOutCubic"/>
	<animation property="offsetX" from="0" to="0.02" begin="1870" duration="120" autoreverse="true" mode="EasyOutCubic"/>
</storyboard>
<storyboard event="activateNext">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="600" duration="500" mode="Linear"/>
    <animation property="offsetX" from="-1" to="0" begin="600" duration="1150" mode="bump"/>
	<animation property="offsetX" from="0" to="0.05" begin="1750" duration="120" autoreverse="true" mode="EasyOutCubic"/>
	<animation property="offsetX" from="0" to="0.02" begin="1870" duration="120" autoreverse="true" mode="EasyOutCubic"/>
</storyboard>
<storyboard event="activatePrev">
    <animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
	<animation property="opacity" from="0" to="1" begin="600" duration="500" mode="Linear"/>
    <animation property="offsetX" from="-1" to="0" begin="600" duration="1150" mode="bump"/>
	<animation property="offsetX" from="0" to="0.05" begin="1750" duration="120" autoreverse="true" mode="EasyOutCubic"/>
	<animation property="offsetX" from="0" to="0.02" begin="1870" duration="120" autoreverse="true" mode="EasyOutCubic"/>
</storyboard>
</image>

<!-- ################ Bezel autour de la video ##################### -->
<image name="Videobezel" extra="true">
<path>./video.png</path>
<origin>0.5 0.5</origin>
<rotationOrigin>0.5 0.5</rotationOrigin>
<scaleOrigin>0.5 0.5</scaleOrigin>
<pos>0.517708333333333 0.562037037037037</pos>
