<animation property="offsetX" from="1" to="1" begin="7500" duration="5000" autoreverse="false" repeat="" mode="linear"/>
</storyboard>
<storyboard event="activateNext" repeatAt="1">
<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
<animation property="opacity" from="0" to="1" begin="1000" duration="100" mode="Linear"/>
<animation property="offsetX" from="-1" to="1" begin="1000" duration="5000" autoreverse="false" repeat="" mode="linear"/>
<animation property="offsetX" from="1" to="1" begin="7500" duration="5000" autoreverse="false" repeat="" mode="linear"/>
</storyboard>
<storyboard event="activatePrev" repeatAt="1">
<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
<animation property="opacity" from="0" to="1" begin="1000" duration="100" mode="Linear"/>
<animation property="offsetX" from="-1" to="1" begin="1000" duration="5000" autoreverse="false" repeat="" mode="linear"/>
<animation property="offsetX" from="1" to="1" begin="7500" duration="5000" autoreverse="false" repeat="" mode="linear"/>
</storyboard>
</image>

<image name="Artwork2Flip" extra="true">
<path>./Artwork2.png</path>
<scaleOrigin>-0.3 -0.3</scaleOrigin>
<origin>0.5 0.5</origin>
<zIndex>200</zIndex>
<pos>0.177083333333333 0.840</pos>
<size>0.338541666666667 0.325</size>
<flipX>true</flipX>
<linearSmouth>true</linearSmouth>

<!-- # Traverse D->G Sweet # -->
<storyboard event="open" repeatAt="1">
<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
<animation property="opacity" from="0" to="1" begin="7500" duration="100" mode="Linear"/>
<animation property="offsetX" from="1" to="-1" begin="7500" duration="5000" autoreverse="false" repeat="" mode="linear"/>
</storyboard>
<storyboard event="activateNext" repeatAt="1">
<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
<animation property="opacity" from="0" to="1" begin="7500" duration="100" mode="Linear"/>
<animation property="offsetX" from="1" to="-1" begin="7500" duration="5000" autoreverse="false" repeat="" mode="linear"/>
</storyboard>
<storyboard event="activatePrev" repeatAt="1">
<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
<animation property="opacity" from="0" to="1" begin="7500" duration="100" mode="Linear"/>
<animation property="offsetX" from="1" to="-1" begin="7500" duration="5000" autoreverse="false" repeat="" mode="linear"/>
</storyboard>
</image>

<!-- ################ Artwork3 ##################### -->
<image name="Artwork3" extra="true">
<path>./Artwork3.png</path>
<scaleOrigin>-0.3 -0.3</scaleOrigin>
<origin>0.5 0.5</origin>
<zIndex>230</zIndex>
<pos>0.506770833333333 0.530092592592593</pos>
<size>0.722916666666667 0.576851851851852</size>

<!-- # Arrivee Centrale Zoom puis dezoom en position # -->
		<storyboard event="open">
			<animation property="scaleOrigin" to="0 0" mode="Linear"/>
