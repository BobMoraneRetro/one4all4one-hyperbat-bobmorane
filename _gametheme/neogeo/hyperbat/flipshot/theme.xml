<!-- ################ Artwork2 ##################### -->
<image name="Artwork2" extra="true">
	<path>./Artwork2.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.719010416666667 0.640740740740741</pos>
	<size>0.427604166666667 0.433333333333333</size>
	<linearSmooth>true</linearSmooth>

<!-- # Arrivee en Bump  Gauche droite-->
	<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" begin="500" duration="1000" mode="bump"/>
		<animation property="offsetX" from="0" to="-0.1" begin="1500" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="-0.05" begin="1740" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="-0.02" begin="1980" duration="100" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="rotation" from="0" to="-10" begin="2800" duration="1000" autoreverse="false" mode="EaseInOut"/>
		<animation property="rotation" from="-10" to="10" begin="4100" duration="2000" autoreverse="true" repeat="forever" mode="EaseInOut"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" begin="500" duration="1000" mode="bump"/>
		<animation property="offsetX" from="0" to="-0.1" begin="1500" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="-0.05" begin="1740" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="-0.02" begin="1980" duration="100" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="rotation" from="0" to="-10" begin="2800" duration="1000" autoreverse="false" mode="EaseInOut"/>
		<animation property="rotation" from="-10" to="10" begin="4100" duration="2000" autoreverse="true" repeat="forever" mode="EaseInOut"/>
	</storyboard>
	<storyboard event="activatePrev" >
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" begin="500" duration="1000" mode="bump"/>
		<animation property="offsetX" from="0" to="-0.1" begin="1500" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="-0.05" begin="1740" duration="120" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="offsetX" from="0" to="-0.02" begin="1980" duration="100" autoreverse="true" mode="EasyOutCubic"/>
		<animation property="rotation" from="0" to="-10" begin="2800" duration="1000" autoreverse="false" mode="EaseInOut"/>
		<animation property="rotation" from="-10" to="10" begin="4100" duration="2000" autoreverse="true" repeat="forever" mode="EaseInOut"/>
	</storyboard>
</image>

