<?xml version="1.0" encoding="UTF-8"?>


<theme defaultView="hyperbat">
<formatVersion>7</formatVersion>
<view name="detailed, gamecarousel">

<!-- ################ Fond du theme ##################### -->

<image name="Background" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>100</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="deactivateNext">
       	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
      	<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
		<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
	</storyboard>
</image>

<image name="Background2" extra="true">
	<path>./Background.png</path>
	<pos>0.5 0.5</pos>
	<size>1 1</size>
	<origin>0.5 0.5</origin>
	<zIndex>130</zIndex>
	<scaleOrigin>0 -0.3</scaleOrigin>
	<storyboard event="open">
       	<animation property="opacity" from="0" to="0.7" begin="500" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="activatePrev">
       	<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
	</storyboard>
	<storyboard event="deactivateNext">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
	<storyboard event="deactivatePrev">
		<animation property="opacity" from="1" to="0" begin="" duration="50" mode="linear"/>
	</storyboard>
</image>

<!-- ################ Artwork1 ##################### -->

<image name="Artwork1" extra="true">
	<path>./Artwork1.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>200</zIndex>
	<pos>0.732552083333333 0.194444444444444</pos>
	<size>0.358854166666667 0.388888888888889</size>

<!-- # Arrivee : G->D # -->
<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
		<animation property="offsetY" from="-1" to="0" begin="650" duration="500" mode="EaseOut"/>
		<animation property="scale" to="1.02" begin="1350" autoreverse="true" duration="800" repeat="forever" mode="EaseInCubic"/>
</storyboard>
<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
		<animation property="offsetY" from="-1" to="0" begin="650" duration="500" mode="EaseOut"/>
		<animation property="scale" to="1.02" begin="1350" autoreverse="true" duration="800" repeat="forever" mode="EaseInCubic"/>
</storyboard>
<storyboard event="activatePrev">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
		<animation property="offsetY" from="-1" to="0" begin="650" duration="500" mode="EaseOut"/>
		<animation property="scale" to="1.02" begin="1350" autoreverse="true" duration="800" repeat="forever" mode="EaseInCubic"/>
</storyboard>
</image>

<!-- ################ Artwork2 ##################### -->
<image name="Artwork2" extra="true">
<path>./Artwork2.png</path>
<scaleOrigin>-0.3 -0.3</scaleOrigin>
<origin>0.5 0.5</origin>
<zIndex>200</zIndex>
<pos>0.5 0.911111111111111</pos>
<size>0.171875 0.101851851851852</size>
<linearSmooth>True</linearSmooth>

<!-- # Arrivee D->G Sweet # -->
<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1000" duration="2500" mode="Linear"/>
		<animation property="offsetY" from="1" to="0" begin="1000" duration="2500" mode="EaseOut"/>
		<animation property="offsetX" from="0" to="-0.05" begin="4200" duration="10000" autoreverse="true" repeat="forever" mode="bump"/>
		<animation property="offsetY" from="0" to="-0.03" begin="4000" duration="4000" autoreverse="true" repeat="forever" mode="EaseInCubic"/>
</storyboard>
<storyboard event="activateNext">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1000" duration="2500" mode="Linear"/>
		<animation property="offsetY" from="1" to="0" begin="1000" duration="2500" mode="EaseOut"/>
		<animation property="offsetX" from="0" to="-0.05" begin="4200" duration="10000" autoreverse="true" repeat="forever" mode="bump"/>
		<animation property="offsetY" from="0" to="-0.03" begin="4000" duration="4000" autoreverse="true" repeat="forever" mode="EaseInCubic"/>
</storyboard>
<storyboard event="activatePrev" >
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="1000" duration="2500" mode="Linear"/>
		<animation property="offsetY" from="1" to="0" begin="1000" duration="2500" mode="EaseOut"/>
		<animation property="offsetX" from="0" to="-0.05" begin="4200" duration="10000" autoreverse="true" repeat="forever" mode="bump"/>
		<animation property="offsetY" from="0" to="-0.03" begin="4000" duration="4000" autoreverse="true" repeat="forever" mode="EaseInCubic"/>
</storyboard>
</image>

<!-- ################ Artwork3 ##################### -->
<image name="Artwork3" extra="true">
	<path>./Artwork3.png</path>
	<scaleOrigin>-0.3 -0.3</scaleOrigin>
	<origin>0.5 0.5</origin>
	<zIndex>230</zIndex>
	<pos>0.802864583333333 0.588888888888889</pos>
	<size>0.394270833333333 0.822222222222222</size>

<!-- # Arrivee : G->D # -->
<storyboard event="open">
		<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
		<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
		<animation property="offsetX" from="1" to="0" begin="650" duration="500" mode="Linear"/>
</storyboard>
