<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.500000000000 0.500000000000</pos>
			<size>1.000000000000 1.000000000000</size>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
		</image>
		<image name="Artwork1" extra="true">
			<path>./Artwork1.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.500000000000 0.500000000000</pos>
			<size>1.000000000000 1.000000000000</size>
			<zIndex>200</zIndex>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<linearSmooth>true</linearSmooth>
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1500" duration="800" mode="EaseIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1500" duration="800" mode="EaseIn"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1500" duration="800" mode="EaseIn"/>
			</storyboard>
		</image>
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.749063670412 0.467196318198</pos>
			<size>0.375666780161 0.890003678150</size>
			<zIndex>210</zIndex>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<linearSmooth>true</linearSmooth>
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1000" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="1000" duration="1000" mode="Linear"/>
				<animation property="rotation" from="0" to="360" begin="1000" duration="1000" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1000" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="1000" duration="1000" mode="Linear"/>
				<animation property="rotation" from="0" to="360" begin="1000" duration="1000" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1000" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="1000" duration="1000" mode="Linear"/>
				<animation property="rotation" from="0" to="360" begin="1000" duration="1000" mode="Linear"/>
			</storyboard>
		</image>
		<video name="PreviewVid" extra="true">
			<path>{game:video}</path>
			<pos>0.282601293837 0.460031021829</pos>
			<maxSize>0.435818862785 0.581091817047</maxSize>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<delay>0.4</delay>
			<effect>none</effect>
			<zIndex>220</zIndex>
			<shader>
				<path>:/shaders/border.glsl</path>
				<cornerRadius>0.05</cornerRadius>
				<borderSize>0.025</borderSize>
				<borderColor>0080c0ff</borderColor>
				<innerShadowSize>0.01</innerShadowSize>
				<innerShadowColor>00000030</innerShadowColor>
				<outerShadowSize>0.020</outerShadowSize>
				<outerShadowColor>000000ff</outerShadowColor>
			</shader>
		</video>
		<control name="PreviewVid,Videobezel">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="750" duration="500" mode="Linear"/>
				<animation property="offsetX" from="-1" to="0" begin="0" duration="1500" mode="linear"/>
				<animation property="offsetX" from="0" to="0.03" begin="1000" duration="4000" autoreverse="true" repeat="forever" mode="easein"/>
				<animation property="offsetY" from="0" to="0.03" begin="1500" duration="2500" autoreverse="true" repeat="forever" mode="easeout"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="750" duration="500" mode="Linear"/>
				<animation property="offsetX" from="-1" to="0" begin="0" duration="1500" mode="linear"/>
				<animation property="offsetX" from="0" to="0.03" begin="1000" duration="4000" autoreverse="true" repeat="forever" mode="easein"/>
				<animation property="offsetY" from="0" to="0.03" begin="1500" duration="2500" autoreverse="true" repeat="forever" mode="easeout"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="750" duration="500" mode="Linear"/>
				<animation property="offsetX" from="-1" to="0" begin="0" duration="1500" mode="linear"/>
				<animation property="offsetX" from="0" to="0.03" begin="1000" duration="4000" autoreverse="true" repeat="forever" mode="easein"/>
				<animation property="offsetY" from="0" to="0.03" begin="1500" duration="2500" autoreverse="true" repeat="forever" mode="easeout"/>
			</storyboard>
		</control>
		<image name="md_cartridge" extra="true">
			<visible>false</visible>
			<zIndex>230</zIndex>
		</image>
		<image name="md_boxart" extra="true">
			<visible>false</visible>
			<zIndex>230</zIndex>
		</image>
		<control name="Artwork1, Artwork2, PreviewVid">
			<storyboard event="deactivateNext">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
		</control>
	</customView>
</theme>
