<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<!-- ################ Fond du theme ##################### -->
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork1 ##################### -->
		<image name="Artwork1" extra="true">
			<path>./Artwork1.png</path>
			<scaleOrigin>0 0</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.76 0.924074074074074</pos>
			<size>0.1609375 0.0537037037037037</size>
			<linearSmooth>true</linearSmooth>
			<shader>
                <path>:/shaders/pixelate.glsl</path>
                <pixelSize>30</pixelSize>
            </shader>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2300" duration="1000" mode="Linear"/>
				<animation property="shader.pixelSize" to="0" begin="2300" duration="1000" mode="linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2300" duration="1000" mode="Linear"/>
				<animation property="shader.pixelSize" to="0" begin="2300" duration="1000" mode="linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2300" duration="1000" mode="Linear"/>
				<animation property="shader.pixelSize" to="0" begin="2300" duration="1000" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork2 ##################### -->
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.423177083333333 0.221759259259259</pos>
			<size>0.352604166666667 0.443518518518519</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en Bump  # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="950" duration="500" mode="Linear"/>
				<animation property="scale" from="0" to="1" begin="950" duration="500" mode="bump"/>
				<animation property="scale" from="1" to="1.1" begin="1450" duration="120" autoreverse="true" mode="EasyOutCubic"/>
				<animation property="scale" from="1" to="1.05" begin="1570" duration="120" autoreverse="true" mode="EasyOutCubic"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="950" duration="500" mode="Linear"/>
				<animation property="scale" from="0" to="1" begin="950" duration="500" mode="bump"/>
				<animation property="scale" from="1" to="1.1" begin="1450" duration="120" autoreverse="true" mode="EasyOutCubic"/>
				<animation property="scale" from="1" to="1.05" begin="1570" duration="120" autoreverse="true" mode="EasyOutCubic"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="950" duration="500" mode="Linear"/>
				<animation property="scale" from="0" to="1" begin="950" duration="500" mode="bump"/>
				<animation property="scale" from="1" to="1.1" begin="1450" duration="120" autoreverse="true" mode="EasyOutCubic"/>
				<animation property="scale" from="1" to="1.05" begin="1570" duration="120" autoreverse="true" mode="EasyOutCubic"/>
			</storyboard>
			</image>
		<!-- ################ Artwork3 ##################### -->
		<image name="Artwork3" extra="true">
			<path>./Artwork3.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.545833333333333 0.131944444444444</pos>
			<size>0.373958333333333 0.219444444444444</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en Bump  # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
				<animation property="scale" from="0" to="1" begin="500" duration="500" mode="bump"/>
				<animation property="scale" from="1" to="1.1" begin="1000" duration="120" autoreverse="true" mode="EasyOutCubic"/>
				<animation property="scale" from="1" to="1.05" begin="1120" duration="120" autoreverse="true" mode="EasyOutCubic"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
				<animation property="scale" from="0" to="1" begin="500" duration="500" mode="bump"/>
				<animation property="scale" from="1" to="1.1" begin="1000" duration="120" autoreverse="true" mode="EasyOutCubic"/>
				<animation property="scale" from="1" to="1.05" begin="1120" duration="120" autoreverse="true" mode="EasyOutCubic"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
				<animation property="scale" from="0" to="1" begin="500" duration="500" mode="bump"/>
				<animation property="scale" from="1" to="1.1" begin="1000" duration="120" autoreverse="true" mode="EasyOutCubic"/>
				<animation property="scale" from="1" to="1.05" begin="1120" duration="120" autoreverse="true" mode="EasyOutCubic"/>
			</storyboard>
		</image>
		<!-- ################ Artwork4 ##################### -->
		<image name="Artwork4" extra="true">
			<path>./Artwork4.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.244791666666667 0.5</pos>
			<size>0.489583333333333 1</size>
			<!-- # Arrivee : D->G # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="offsetX" from="-0.5" to="0" begin="650" duration="2000" mode="easeOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="offsetX" from="-0.5" to="0" begin="650" duration="2000" mode="easeOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="offsetX" from="-0.5" to="0" begin="650" duration="2000" mode="easeOut"/>
			</storyboard>
		</image>
		<!-- ################ Artwork5 ##################### -->
		<image name="Artwork5" extra="true">
			<path>./eclair.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.5 0.472685185185185</pos>
			<size>1 0.94537037037037</size>
			<storyboard event="open" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" begin="2500" from="1" to="0" duration="2000" mode="easeOut"/>
				<animation property="opacity" begin="6000" from="0.5" to="0" duration="100" mode="easeOutQuint"/>
				<animation property="opacity" begin="6100" from="0.3" to="0" duration="200" mode="easeOutQuint"/>
				<animation property="opacity" begin="6300" from="0.7" to="0" duration="100" mode="easeOutQuint"/>
				<animation property="opacity" begin="6400" from="1" to="0" duration="2000" mode="easeOutQuint"/>
				<animation property="opacity" begin="8000" from="0" to="0" duration="2000" mode="easeOutQuint"/>
			</storyboard>
			<storyboard event="activateNext" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" begin="2500" from="1" to="0" duration="2000" mode="easeOut"/>
				<animation property="opacity" begin="6000" from="0.5" to="0" duration="100" mode="easeOutQuint"/>
				<animation property="opacity" begin="6100" from="0.3" to="0" duration="200" mode="easeOutQuint"/>
				<animation property="opacity" begin="6300" from="0.7" to="0" duration="100" mode="easeOutQuint"/>
				<animation property="opacity" begin="6400" from="1" to="0" duration="2000" mode="easeOutQuint"/>
				<animation property="opacity" begin="8000" from="0" to="0" duration="2000" mode="easeOutQuint"/>
			</storyboard>
			<storyboard event="activatePrev" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" begin="2500" from="1" to="0" duration="2000" mode="easeOut"/>
				<animation property="opacity" begin="6000" from="0.5" to="0" duration="100" mode="easeOutQuint"/>
				<animation property="opacity" begin="6100" from="0.3" to="0" duration="200" mode="easeOutQuint"/>
				<animation property="opacity" begin="6300" from="0.7" to="0" duration="100" mode="easeOutQuint"/>
				<animation property="opacity" begin="6400" from="1" to="0" duration="2000" mode="easeOutQuint"/>
				<animation property="opacity" begin="8000" from="0" to="0" duration="2000" mode="easeOutQuint"/>
			</storyboard>
		</image>
		<image name="Artwork51" extra="true">
			<path>./eclair2.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.484114583333333 0.478240740740741</pos>
			<size>0.441145833333333 0.956481481481481</size>
			<!-- # Arrivee : D->G # -->
			<storyboard event="open" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" begin="4500" from="0.8" to="0" duration="500" mode="easeOutQuint"/>
				<animation property="opacity" begin="5700" from="0.4" to="0" duration="50" repeat="4" mode="linear"/>
				<animation property="opacity" begin="7700" from="0.6" to="0" duration="50" repeat="4" mode="linear"/>
			</storyboard>
			<storyboard event="activateNext" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" begin="4500" from="0.8" to="0" duration="500" mode="easeOutQuint"/>
				<animation property="opacity" begin="5700" from="0.4" to="0" duration="50" repeat="4" mode="linear"/>
				<animation property="opacity" begin="7700" from="0.6" to="0" duration="50" repeat="4" mode="linear"/>
			</storyboard>
			<storyboard event="activatePrev" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" begin="4500" from="0.8" to="0" duration="500" mode="easeOutQuint"/>
				<animation property="opacity" begin="5700" from="0.4" to="0" duration="50" repeat="4" mode="linear"/>
				<animation property="opacity" begin="7700" from="0.6" to="0" duration="50" repeat="4" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Bezel autour de la video ##################### -->
		<image name="Videobezel" extra="true">
			<path>./video.png</path>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<pos>0.76 0.535</pos>
			<size>0.31 0.71</size>
			<zIndex>190</zIndex>
		</image>
		<!-- ################ La video ##################### -->
		<video name="PreviewVid" extra="true">
			<visible>true</visible>
			<path>./Video.mp4</path>
			<maxSize>0.46 0.68</maxSize>
			<minSize>0.45 0.5</minSize>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<delay>0.4</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<effect>none</effect>
			<pos>0.76 0.538888888888889</pos>
			<zIndex>180</zIndex>
		</video>
		<!-- ################ Animations du bezel video et de la video si identique ##################### -->
		<!-- # Arriv e : D->G # -->
		<control name="PreviewVid,Videobezel">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="650" duration="2000" mode="easeOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="650" duration="2000" mode="easeOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="650" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="650" duration="2000" mode="easeOut"/>
			</storyboard>
		</control>
		<!-- ################ Animation de sortie des artworks ##################### -->
		<control name="Artwork1, Artwork2, Artwork3, Artwork4, Artwork5, Artwork51, PreviewVid,Videobezel">
			<storyboard event="deactivateNext">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
		</control>
		<image name="md_cartridge" extra="true">
			<visible>false</visible>
		</image>
		<image name="md_boxart">
			<visible>false</visible>
		</image>
	</customView>
</theme>