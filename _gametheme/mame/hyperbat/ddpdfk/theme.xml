<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<!-- ################ Fond du theme ##################### -->
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork1 ##################### -->
		<image name="Artwork1" extra="true">
			<path>./Artwork1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.69453125 0.24537037037037</pos>
			<size>0.293229166666667 0.457407407407407</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="400" mode="Linear"/>
				<animation property="scale" to="1" begin="500" autoreverse="false" duration="400" mode="easeIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="400" mode="Linear"/>
				<animation property="scale" to="1" begin="500" autoreverse="false" duration="400" mode="easeIn"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="400" mode="Linear"/>
				<animation property="scale" to="1" begin="500" autoreverse="false" duration="400" mode="easeIn"/>
			</storyboard>
		</image>
		<!-- ################ Artwork2 ##################### -->
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.702604166666667 0.744907407407407</pos>
			<size>0.291666666666667 0.437962962962963</size>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1500" duration="400" mode="Linear"/>
				<animation property="scale" to="1" begin="1500" autoreverse="false" duration="400" mode="easeIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1500" duration="400" mode="Linear"/>
				<animation property="scale" to="1" begin="1500" autoreverse="false" duration="400" mode="easeIn"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1500" duration="400" mode="Linear"/>
				<animation property="scale" to="1" begin="1500" autoreverse="false" duration="400" mode="easeIn"/>
			</storyboard>
		</image>
		<!-- ################ Artwork3 ##################### -->
		<image name="Artwork3" extra="true">
			<path>./Artwork3.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.503645833333333 0.499074074074074</pos>
			<size>0.276041666666667 0.451851851851852</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2500" duration="400" mode="Linear"/>
				<animation property="scale" to="1" begin="2500" autoreverse="false" duration="400" mode="easeIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2500" duration="400" mode="Linear"/>
				<animation property="scale" to="1" begin="2500" autoreverse="false" duration="400" mode="easeIn"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2500" duration="400" mode="Linear"/>
				<animation property="scale" to="1" begin="2500" autoreverse="false" duration="400" mode="easeIn"/>
			</storyboard>
		</image>
		<!-- ################ Artwork4 ##################### -->
		<image name="Artwork4" extra="true">
			<path>./Artwork4.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.86 0.397222222222222</pos>
			<size>0.219791666666667 0.542592592592593</size>
			<!-- # Arrivee : D->G # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
				<animation property="offsetY" from="-1" to="0" begin="500" duration="2500" mode="easeout"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
				<animation property="offsetY" from="-1" to="0" begin="500" duration="2500" mode="easeout"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
				<animation property="offsetY" from="-1" to="0" begin="500" duration="2500" mode="easeout"/>
			</storyboard>
		</image>
		<!-- ################ Bezel autour de la video ##################### -->
		<image name="Videobezel" extra="true">
			<path>./video.png</path>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<pos>0.191145833333333 0.44</pos>
			<size>0.325 0.75</size>
			<zIndex>190</zIndex>
		</image>
		<!-- ################ La video ##################### -->
		<video name="PreviewVid" extra="true">
			<visible>true</visible>
			<path>{game:video}</path>
			<maxSize>0.46 0.68</maxSize>
			<minSize>0.45 0.5</minSize>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<delay>0.4</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<effect>none</effect>
			<pos>0.191145833333333 0.44</pos>
			<zIndex>180</zIndex>
		</video>
		<!-- ################ Animations du bezel video et de la video si identique ##################### -->
		<!-- # Arriv e : D->G # -->
		<control name="PreviewVid,Videobezel">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="500" duration="2500" mode="easeout"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="500" duration="2500" mode="easeout"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="500" duration="2500" mode="easeout"/>
			</storyboard>
		</control>
		<!-- ################ Animation de sortie des artworks ##################### -->
		<control name="Artwork4">
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
				<animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
				<animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
			</storyboard>
		</control>
		<control name="Artwork1, Artwork2, Artwork3, PreviewVid,Videobezel">
			<storyboard event="deactivateNext">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
		</control>
		<image name="md_cartridge" extra="true">
			<visible>false</visible>
		</image>
		<image name="md_boxart">
			<visible>false</visible>
		</image>
	</customView>
</theme>