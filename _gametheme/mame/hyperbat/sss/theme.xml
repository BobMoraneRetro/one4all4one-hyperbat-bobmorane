			<pos>0.807291666666667 0.546759259259259</pos>
			<size>0.3 0.937962962962963</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="3500" duration="500" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="3500" duration="800" mode="easeout"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="3500" duration="500" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="3500" duration="800" mode="easeout"/>
			</storyboard>
			<storyboard event="activatePrev">
