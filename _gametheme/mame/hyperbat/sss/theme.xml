<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<!-- ################ Fond du theme ##################### -->
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork1 ##################### -->
		<image name="Artwork1" extra="true">
			<path>./Artwork1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.174479166666667 0.131018518518519</pos>
			<size>0.2625 0.191666666666667</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="500" mode="easeIn"/>
				<animation property="scaleOrigin" to="0 0" begin="100" duration="" mode="Linear"/>
				<animation property="scale" from="1" to="1.05" begin="2000" autoreverse="true" repeat="forever" duration="1500" mode="easeIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="500" mode="easeIn"/>
				<animation property="scaleOrigin" to="0 0" begin="100" duration="" mode="Linear"/>
				<animation property="scale" from="1" to="1.05" begin="2000" autoreverse="true" repeat="forever" duration="1500" mode="easeIn"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="500" mode="easeIn"/>
				<animation property="scaleOrigin" to="0 0" begin="100" duration="" mode="Linear"/>
				<animation property="scale" from="1" to="1.05" begin="2000" autoreverse="true" repeat="forever" duration="1500" mode="easeIn"/>
			</storyboard>
		</image>
		<!-- ################ Artwork2 ##################### -->
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.625 0.700925925925926</pos>
			<size>0.323958333333333 0.551851851851852</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="300" mode="Linear"/>
				<animation property="offsetX" from="-1" to="0.6" begin="1000" duration="4000" mode="Linear"/>
				<animation property="offsetY" from="0.7" to="-0.35" begin="1000" duration="2000" mode="EaseInOut"/>
				<animation property="offsetY" from="-0.35" to="2" begin="3000" duration="2200" mode="EaseInOut"/>
				<animation property="scale" from="0.2" to="1.3" begin="1000" duration="4200" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4200" duration="1000" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="300" mode="Linear"/>
				<animation property="offsetX" from="-1" to="0.6" begin="1000" duration="4000" mode="Linear"/>
				<animation property="offsetY" from="0.7" to="-0.35" begin="1000" duration="2000" mode="EaseInOut"/>
				<animation property="offsetY" from="-0.35" to="2" begin="3000" duration="2200" mode="EaseInOut"/>
				<animation property="scale" from="0.2" to="1.3" begin="1000" duration="4200" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4200" duration="1000" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev" repeatAt="1">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="300" mode="Linear"/>
				<animation property="offsetX" from="-1" to="0.6" begin="1000" duration="4000" mode="Linear"/>
				<animation property="offsetY" from="0.7" to="-0.35" begin="1000" duration="2000" mode="EaseInOut"/>
				<animation property="offsetY" from="-0.35" to="2" begin="3000" duration="2200" mode="EaseInOut"/>
				<animation property="scale" from="0.2" to="1.3" begin="1000" duration="4200" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="4200" duration="1000" mode="Linear"/>
			</storyboard>
			</image>
