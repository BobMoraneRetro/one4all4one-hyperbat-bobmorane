<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<!-- ################ Fond du theme ##################### -->
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ Artwork1 ##################### -->
		<image name="Artwork1" extra="true">
			<path>./Artwork1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.20390625 0.203240740740741</pos>
			<size>0.3734375 0.373148148148148</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee en DeZoom  -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="800" mode="Linear"/>
				<animation property="scaleOrigin" to="0 0" begin="100" duration="" mode="Linear"/>
				<animation property="scale" from="7" to="1" begin="1000" autoreverse="false" duration="800" mode="linear"/>
				<animation property="offsetX" from="1" to="0" duration="1000" mode="EaseOutQuint"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="800" mode="Linear"/>
				<animation property="scaleOrigin" to="0 0" begin="100" duration="" mode="Linear"/>
				<animation property="scale" from="7" to="1" begin="1000" autoreverse="false" duration="800" mode="linear"/>
				<animation property="offsetX" from="1" to="0" duration="1000" mode="EaseOutQuint"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="700" duration="800" mode="Linear"/>
				<animation property="scaleOrigin" to="0 0" begin="100" duration="" mode="Linear"/>
				<animation property="scale" from="7" to="1" begin="700" autoreverse="false" duration="800" mode="linear"/>
				<animation property="offsetX" from="1" to="0" duration="700" mode="EaseOutQuint"/>
			</storyboard>
		</image>
		<!-- ################ Artwork2 ##################### -->
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>200</zIndex>
			<pos>0.797916666666667 0.483333333333333</pos>
			<size>0.404166666666667 0.966666666666667</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1300" duration="1000" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="1300" duration="2000" mode="EaseOutCubic"/>
				<animation property="offsetY" from="0" to="0.03" begin="3500" duration="5000" autoreverse="true" repeat="forever" mode="EsaeInOut"/>	
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1300" duration="1000" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="1300" duration="2000" mode="EaseOutCubic"/>
				<animation property="offsetY" from="0" to="0.03" begin="3500" duration="5000" autoreverse="true" repeat="forever" mode="EsaeInOut"/>	
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1000" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="1000" duration="2000" mode="EaseOutCubic"/>
				<animation property="offsetY" from="0" to="0.03" begin="3200" duration="5000" autoreverse="true" repeat="forever" mode="EsaeInOut"/>				
			</storyboard>
		</image>
		<!-- ################ Artwork3 ##################### -->
		<image name="Artwork3" extra="true">
			<path>./Artwork3.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<pos>0.878385416666667 0.915277777777778</pos>
			<size>0.183854166666667 0.075</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="500" duration="500" mode="linear"/>
				<animation property="scaleOrigin"  to="0 0" begin="3000" duration="" mode="linear"/>
				<animation property="scale" from="1" to="1.05" begin="3000" autoreverse="true" repeat="forever" duration="1000" mode="EaseIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="500" duration="500" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="500" duration="500" mode="linear"/>
				<animation property="scaleOrigin"  to="0 0" begin="3000" duration="" mode="linear"/>
				<animation property="scale" from="1" to="1.05" begin="3000" autoreverse="true" repeat="forever" duration="1000" mode="EaseIn"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="300" duration="500" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" begin="300" duration="500" mode="linear"/>
				<animation property="scaleOrigin"  to="0 0" begin="2700" duration="" mode="linear"/>
				<animation property="scale" from="1" to="1.05" begin="2700" autoreverse="true" repeat="forever" duration="1000" mode="EaseIn"/>
			</storyboard>
		</image>
		<!-- ################ Artwork4 ##################### -->
		<image name="Artwork4" extra="true">
			<path>./Artwork4.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<linearSmooth>true</linearSmooth>
			<pos>0.223958333333333 0.538425925925926</pos>
			<size>0.360416666666667 0.365740740740741</size>
			<!-- # Arrivee : D->G # -->
			<storyboard event="open" repeatAt="2500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2500" duration="500" mode="Linear"/>
				<animation property="offsetX" from="-0.5" to="1" begin="2500" duration="1500" mode="Linear"/>
				<animation property="opacity" from="1" to="1" begin="6000" duration="4000" mode="Linear"/>	
			</storyboard>
			<storyboard event="activateNext" repeatAt="2500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2500" duration="500" mode="Linear"/>
				<animation property="offsetX" from="-0.5" to="1" begin="2500" duration="1500" mode="Linear"/>
				<animation property="opacity" from="1" to="1" begin="6000" duration="4000" mode="Linear"/>	
			</storyboard>
			<storyboard event="activatePrev" repeatAt="2500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2200" duration="500" mode="Linear"/>
				<animation property="offsetX" from="-0.5" to="1" begin="2200" duration="1500" mode="Linear"/>
				<animation property="opacity" from="1" to="1" begin="5700" duration="4000" mode="Linear"/>	
			</storyboard>
		</image>
		<image name="Artwork41" extra="true">
			<path>./Artwork4.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>230</zIndex>
			<linearSmooth>true</linearSmooth>
			<pos>0.223958333333333 0.538425925925926</pos>
			<size>0.360416666666667 0.365740740740741</size>
			<flipX>true</flipX>
			<!-- # Arrivee : D->G # -->
			<storyboard event="open" repeatAt="2500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="4500" duration="500" mode="Linear"/>
				<animation property="offsetX" from="1" to="-0.5" begin="4500" duration="1500" mode="Linear"/>
				<animation property="opacity" from="1" to="1" begin="6000" duration="4000" mode="Linear"/>		
			</storyboard>
			<storyboard event="activateNext" repeatAt="2500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="4500" duration="500" mode="Linear"/>
				<animation property="offsetX" from="1" to="-0.5" begin="4500" duration="1500" mode="Linear"/>
				<animation property="opacity" from="1" to="1" begin="6000" duration="4000" mode="Linear"/>	
			</storyboard>
			<storyboard event="activatePrev" repeatAt="2500">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="4200" duration="500" mode="Linear"/>
				<animation property="offsetX" from="1" to="-0.5" begin="4200" duration="1500" mode="Linear"/>
				<animation property="opacity" from="1" to="1" begin="5700" duration="4000" mode="Linear"/>				
			</storyboard>
		</image>
		<!-- ################ Bezel autour de la video ##################### -->
		<image name="Videobezel" extra="true">
			<path>./video.png</path>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<pos>0.5 0.5</pos>
			<size>0.32 0.755</size>
			<zIndex>190</zIndex>
		</image>
		<!-- ################ La video ##################### -->
		<video name="PreviewVid" extra="true">
			<visible>true</visible>
			<path>{game:video}</path>
			<maxSize>0.46 0.68</maxSize>
			<minSize>0.45 0.5</minSize>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<delay>0.4</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<effect>none</effect>
			<pos>0.5 0.5</pos>
			<zIndex>180</zIndex>
		</video>
		<!-- ################ Animations du bezel video et de la video si identique ##################### -->
		<!-- # Arriv e : D->G # -->
		<control name="PreviewVid,Videobezel">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1300" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="1300" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1300" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="1300" duration="500" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1300" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" begin="1300" duration="500" mode="Linear"/>
			</storyboard>
		</control>
		<!-- ################ Animation de sortie des artworks ##################### -->
		<control name="Artwork4">
			<storyboard event="deactivateNext">
				<animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
				<animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" from="1" to="0" duration="150" mode="linear"/>
				<animation property="scale" to="3" begin="" autoreverse="false" duration="300" mode="easyIn"/>
			</storyboard>
		</control>
		<control name="Artwork1, Artwork2, Artwork3, PreviewVid,Videobezel">
			<storyboard event="deactivateNext">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" from="0" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
		</control>
		<image name="md_cartridge" extra="true">
			<visible>false</visible>
		</image>
		<image name="md_boxart">
			<visible>false</visible>
		</image>
	</customView>
</theme>