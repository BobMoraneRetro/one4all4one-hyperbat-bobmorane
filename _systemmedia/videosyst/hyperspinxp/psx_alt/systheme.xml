				<animation property="opacity" from="0" to="1" begin="200" duration="400" mode="Linear"/>
				<animation property="offsetX" from="-1" to="0" begin="200" duration="1200" mode="EaseOut"/>
			</storyboard>
		</image>
		<!-- ################ Artwork4 ##################### -->
		<image name="Artwork4" extra="true">
			<path>./3.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>33</zIndex>
			<!-- <pos>0.58359375 0.801388888888889</pos> -->
			<pos>0.58 0.775</pos>
			<size>0.306770833333333 0.386111111111111</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard>
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="200" duration="400" mode="Linear"/>
				<animation property="offsetX" from="-1" to="0" begin="200" duration="1200" mode="EaseOut"/>
				<animation property="rotationOrigin" to="0.9 0.15" begin="1000" duration="10" mode="linear"/>
				<animation property="rotation" from="0" to="10" begin="1500" duration="800" mode="linear"/>
				<animation property="rotation" from="10" to="-5" begin="2300" duration="800" autoreverse="true" repeat="forever" mode="linear"/>
				<animation property="offsetX" from="0" to="0.005" begin="1500" duration="800" autoreverse="true" repeat="forever" mode="linear"/>
			</storyboard>
		</image>
		<!-- ################ La video ##################### -->
		<video name="PreviewVid" extra="true">
			<visible>true</visible>
			<path>{random}</path>
			<maxSize>0.46 0.65</maxSize>
			<!-- <minSize>0.4 0.60</minSize> -->
			<origin>0.5 0.5</origin>
			<delay>0.3</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<effect>none</effect>
			<pos>0.279166666666667 0.57</pos>
			<zIndex>2</zIndex>
			<shader>
				<path>:/shaders/border.glsl</path>
				<cornerRadius>0.0</cornerRadius>
				<borderSize>0.018</borderSize>
				<borderColor>ffffff</borderColor>
				<innerShadowSize>0.01</innerShadowSize>
				<innerShadowColor>00000030</innerShadowColor>
				<outerShadowSize>0.020</outerShadowSize>
				<outerShadowColor>00000050</outerShadowColor>
			</shader>
		</video>
