		<video name="PreviewVid" extra="true">
			<visible>true</visible>
			<path>{random}</path>
			<maxSize>0.48 0.70</maxSize>
			<origin>0.5 0.5</origin>
			<offsetX>1</offsetX>
			<delay>0.3</delay>
