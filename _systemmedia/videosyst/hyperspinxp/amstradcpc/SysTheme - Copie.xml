			<path>${extlogoclearjpsvg}</path>
			<path>${intlogoclearjppng}</path>
		</image>
		<!-- ################ Artwork1 ##################### -->
		<image name="Artwork1" extra="true">
			<path>./Artwork1.png</path>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<origin>0.5 0.5</origin>
			<zIndex>2</zIndex>
			<pos>0.54921875 0.636574074074074</pos>
			<size>0.121354166666667 0.330555555555556</size>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee D->G Sweet # -->
			<storyboard>
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1050" duration="300" mode="Linear"/>
				<animation property="scale" from="0" to="1" begin="1050" duration="500" mode="bump"/>
				<animation property="scale" from="1" to="1.4" begin="1550" duration="120" autoreverse="true" mode="EasyOutCubic"/>
				<animation property="scale" from="1" to="1.05" begin="1670" duration="120" autoreverse="true" mode="EasyOutCubic"/>
			</storyboard>
		</image>
		<!-- ################ Artwork2 ##################### -->
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
