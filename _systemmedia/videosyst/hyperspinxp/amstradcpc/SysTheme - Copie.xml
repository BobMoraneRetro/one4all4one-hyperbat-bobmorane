			<rotationOrigin>0.5 0.5</rotationOrigin>
			<rotation>-10</rotation>
			<linearSmooth>true</linearSmooth>
			<!-- # Arrivee : G->D # -->
			<storyboard>
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="2000" duration="300" mode="Linear"/>
				<animation property="h" from="0.05" to="0.141666666666667" begin="2000" duration="300" mode="EaseOut"/>
				<animation property="offsetY" from="0.03" to="0" begin="2000" duration="300" mode="EaseOut"/>
